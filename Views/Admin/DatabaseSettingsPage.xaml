<Page
    x:Class="Inv_M_Sys.Views.Admin.DatabaseSettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression.blend/2008"
    xmlns:local="clr-namespace:Inv_M_Sys.Views.Admin"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:other="clr-namespace:Inv_M_Sys.Converter"
    Title="DatabaseSettingsPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Page.Resources>
        <!--  Styled Input Fields  -->
        <Style x:Key="CustomTextBoxStyle" TargetType="TextBox">
            <Setter Property="BorderBrush" Value="Violet" />
            <Setter Property="BorderThickness" Value="0,0,0,2" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="Background" Value="Transparent" />
        </Style>

        <!--  Styled Password Input Fields  -->
        <Style x:Key="CustomPassBoxStyle" TargetType="PasswordBox">
            <Setter Property="BorderBrush" Value="Violet" />
            <Setter Property="BorderThickness" Value="0,0,0,2" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="Background" Value="Transparent" />
        </Style>

        <!--  Styled Buttons  -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#5F84FF" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Width" Value="180" />
            <Setter Property="Height" Value="45" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="DarkBlue" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <other:EmptyTextToVisibilityConverter x:Key="EmptyTextToVisibilityConverter" />
    </Page.Resources>

    <Grid Background="#E8E8E8">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  🔹 Top Navigation Bar  -->
        <Grid Grid.Row="0" Background="#57AEFF">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*" />
                <ColumnDefinition />
                <ColumnDefinition Width="0.6*" />
            </Grid.ColumnDefinitions>

            <!--  Log Out + Exit + Min/Max Buttons  -->
            <Grid Grid.Column="2">
                <Button
                    Width="150"
                    Margin="0,-1,79,-1"
                    Background="#57AEFF"
                    BorderBrush="Transparent"
                    Content="Log Out"
                    FontFamily="Times New Roman"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="Red" />
                <Button
                    Width="20"
                    Margin="199,-1,10,-1"
                    Background="#57AEFF"
                    BorderBrush="Transparent"
                    Content="X"
                    FontFamily="Times New Roman"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="Red" />
                <Button
                    Width="20"
                    Margin="155,-1,54,-1"
                    Background="#57AEFF"
                    BorderBrush="Transparent"
                    Content="⬜"
                    FontFamily="Times New Roman"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="Red" />
            </Grid>

            <!--  Note And Home Buttons  -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button
                    Grid.Column="1"
                    Width="50"
                    Height="30"
                    Background="#57AEFF"
                    BorderBrush="Transparent">
                    <Canvas Width="20" Height="20">
                        <Path
                            Canvas.Top="-2"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            Data="M12 2a7 7 0 00-7 7v2a5 5 0 00-2 4v1h18v-1a5 5 0 00-2-4V9a7 7 0 00-7-7z M12 22c1.1 0 2-.9 2-2h-4c0 1.1.9 2 2 2z"
                            Fill="Yellow" />
                    </Canvas>
                </Button>
                <Button
                    Grid.Column="0"
                    Width="50"
                    Height="30"
                    Background="#57AEFF"
                    BorderBrush="Transparent"
                    Content="Home"
                    FontFamily="Times New Roman"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="Red" />
            </Grid>
        </Grid>

        <!--  🔹 Scrollable Content  -->
        <ScrollViewer
            Grid.Row="1"
            Margin="40,30,40,20"
            VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical">

                <!--  🔹 Title  -->
                <TextBlock
                    Margin="0,20"
                    HorizontalAlignment="Center"
                    FontSize="24"
                    FontWeight="Bold"
                    Text="Database and Owner Settings" />

                <!--  🔹 Database Settings  -->
                <TextBlock
                    Margin="10,20,10,10"
                    FontSize="20"
                    FontWeight="Bold"
                    Text="⚙ Database Settings" />
                <StackPanel Margin="10">
                    <TextBlock
                        Margin="0,0,0,5"
                        FontSize="14"
                        FontWeight="Bold"
                        Text="Database Host" />
                    <TextBox x:Name="DbHostTextBox" Style="{StaticResource CustomTextBoxStyle}" />

                    <TextBlock
                        Margin="10,10,0,5"
                        FontSize="14"
                        FontWeight="Bold"
                        Text="Database Port" />
                    <TextBox x:Name="DbPortTextBox" Style="{StaticResource CustomTextBoxStyle}" />

                    <TextBlock
                        Margin="10,10,0,5"
                        FontSize="14"
                        FontWeight="Bold"
                        Text="Database Username" />
                    <TextBox x:Name="DbUsernameTextBox" Style="{StaticResource CustomTextBoxStyle}" />

                    <TextBlock
                        Margin="10,10,0,5"
                        FontSize="14"
                        FontWeight="Bold"
                        Text="Database Password" />
                    <PasswordBox x:Name="DbPasswordBox" Style="{StaticResource CustomPassBoxStyle}" />
                </StackPanel>

                <!--  🔹 Owner Settings  -->
                <TextBlock
                    Margin="10,20,10,10"
                    FontSize="20"
                    FontWeight="Bold"
                    Text="👤 Owner Settings" />
                <StackPanel Margin="10">
                    <TextBlock
                        Margin="0,0,0,5"
                        FontSize="14"
                        FontWeight="Bold"
                        Text="Owner Username" />
                    <TextBox x:Name="OwnerUsernameTextBox" Style="{StaticResource CustomTextBoxStyle}" />

                    <TextBlock
                        Margin="10,10,0,5"
                        FontSize="14"
                        FontWeight="Bold"
                        Text="Owner Password" />
                    <PasswordBox x:Name="OwnerPasswordBox" Style="{StaticResource CustomPassBoxStyle}" />
                </StackPanel>

                <!--  🔹 Buttons  -->
                <StackPanel
                    Margin="20"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <Button
                        Click="SaveSettings_Click"
                        Content="Save Settings"
                        Style="{StaticResource RoundedButtonStyle}" />
                    <Button
                        Background="Green"
                        Click="TestConnection_Click"
                        Content="Test Connection"
                        Style="{StaticResource RoundedButtonStyle}" />
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>