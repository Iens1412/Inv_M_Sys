<Page
    x:Class="Inv_M_Sys.Views.Admin.DatabaseSettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Inv_M_Sys.Views.Admin"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:other="clr-namespace:Inv_M_Sys.Converter"
    Title="DatabaseSettingsPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Page.Resources>
        <!--  Styled Input Fields  -->
        <Style x:Key="CustomTextBoxStyle" TargetType="TextBox">
            <Setter Property="BorderBrush" Value="Violet" />
            <Setter Property="BorderThickness" Value="0,0,0,2" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="Background" Value="Transparent" />
        </Style>

        <!--  Styled Password Input Fields  -->
        <Style x:Key="CustomPassBoxStyle" TargetType="TextBox">
            <Setter Property="BorderBrush" Value="Violet" />
            <Setter Property="BorderThickness" Value="0,0,0,2" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="Background" Value="Transparent" />
        </Style>

        <!--  Styled Buttons  -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Width" Value="180" />
            <Setter Property="Height" Value="45" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="DarkBlue" />
                    <!--  Text color change on hover  -->
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--  Similar style for Logout, Exit, and Minimize buttons  -->
        <Style x:Key="ExitMinimizeLogoutButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="Red" />
            <Setter Property="FontFamily" Value="Times New Roman" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="DarkBlue" />
                    <!--  Text/icon color change on hover  -->
                </Trigger>
            </Style.Triggers>
        </Style>

        <other:EmptyTextToVisibilityConverter x:Key="EmptyTextToVisibilityConverter" />
    </Page.Resources>

    <Grid Background="#E8E8E8">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  🔹 Top Navigation Bar  -->
        <Grid Grid.Row="0" Background="#57AEFF">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*" />
                <ColumnDefinition />
                <ColumnDefinition Width="0.6*" />
            </Grid.ColumnDefinitions>

            <!--  Log Out + Exit + Min/Max Buttons  -->
            <Grid Grid.Column="2">
                <Button
                    Width="115"
                    Height="30"
                    Margin="0,0,100,0"
                    Click="Logout_Click"
                    Content="Log Out"
                    Style="{StaticResource ExitMinimizeLogoutButtonStyle}" />
                <Button
                    Width="25"
                    Height="25"
                    Margin="190,0,0,0"
                    Click="Close_Click"
                    Content="X"
                    Style="{StaticResource ExitMinimizeLogoutButtonStyle}" />
                <Button
                    Width="25"
                    Height="25"
                    Margin="120,0,0,0"
                    Click="Minimize_Click"
                    Content="--"
                    Style="{StaticResource ExitMinimizeLogoutButtonStyle}" />
            </Grid>

            <!--  Home Buttons  -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Button
                    Grid.Column="0"
                    Width="50"
                    Height="30"
                    Background="#57AEFF"
                    BorderBrush="Transparent"
                    Click="Home_Click"
                    Content="Home"
                    FontFamily="Times New Roman"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="Red" />
            </Grid>
        </Grid>

        <!--  🔹 Scrollable Content  -->
        <ScrollViewer
            Grid.Row="1"
            Margin="40,30,40,20"
            VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical">

                <!--  🔹 Title  -->
                <TextBlock
                    Margin="0,20"
                    HorizontalAlignment="Center"
                    FontSize="24"
                    FontWeight="Bold"
                    Text="Database and Owner Settings" />

                <!--  🔹 Database Settings  -->
                <TextBlock
                    Margin="10,20,10,10"
                    FontSize="20"
                    FontWeight="Bold"
                    Text="⚙ Database Testing" />
                <StackPanel Margin="10">

                    <StackPanel
                        Margin="20"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <!--  New Buttons for Database Settings  -->

                        <Button
                            Width="Auto"
                            Margin="10"
                            HorizontalAlignment="Center"
                            Background="Red"
                            Click="TestDatabaseConnection_Click"
                            Content="Test Connection"
                            Foreground="White"
                            Style="{StaticResource RoundedButtonStyle}" />
                    </StackPanel>
                </StackPanel>

                <!--  🔹 Owner Settings  -->
                <TextBlock
                    Margin="10,20,10,10"
                    FontSize="20"
                    FontWeight="Bold"
                    Text="👤 Owner Settings" />
                <StackPanel Margin="10">
                    <TextBlock
                        Margin="0,0,0,5"
                        FontSize="14"
                        FontWeight="Bold"
                        Text="Owner Username" />
                    <TextBox x:Name="OwnerUsernameTextBox" Style="{StaticResource CustomTextBoxStyle}" />

                    <TextBlock
                        Margin="10,10,0,5"
                        FontSize="14"
                        FontWeight="Bold"
                        Text="Owner Password" />
                    <TextBox x:Name="OwnerPasswordBox" Style="{StaticResource CustomPassBoxStyle}" />

                    <StackPanel
                        Margin="20"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <!--  Buttons under the Owner Account  -->
                        <Button
                            Width="Auto"
                            Margin="10"
                            HorizontalAlignment="Center"
                            Background="Green"
                            Click="UpdateOwnerCredentials_Click"
                            Content="Update Owner Password"
                            Foreground="White"
                            Style="{StaticResource RoundedButtonStyle}" />

                        <Button
                            Width="Auto"
                            Margin="10"
                            HorizontalAlignment="Center"
                            Background="DeepSkyBlue"
                            Click="ClearBtn_Click"
                            Content="Clear Fields"
                            Foreground="White"
                            Style="{StaticResource RoundedButtonStyle}" />

                        <Button
                            Width="Auto"
                            Margin="10"
                            HorizontalAlignment="Center"
                            Background="Red"
                            Click="Reset_Owner_Credentials"
                            Content="Reset Owner Credentials"
                            Foreground="White"
                            Style="{StaticResource RoundedButtonStyle}" />
                    </StackPanel>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
