<Page
    x:Class="Inv_M_Sys.Views.Admin.UsersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Inv_M_Sys.Views.Admin"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:other="clr-namespace:Inv_M_Sys.Converter"
    Title="UsersPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Page.Resources>

        <!--  Normal Buttons  -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Background" Value="Red" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Padding" Value="10,5" />

            <!--  Hover Effect  -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5F84FF" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="Cursor" Value="Hand" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <!--  Search Buttons  -->
        <Style x:Key="SrchRefButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Background" Value="#02C125" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Padding" Value="10,5" />

            <!--  Hover Effect  -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5F84FF" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="Cursor" Value="Hand" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <!--  New OR Edit Buttons  -->
        <Style x:Key="NewOrEditButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Background" Value="#D88500" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Padding" Value="10,5" />

            <!--  Hover Effect  -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5F84FF" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="Cursor" Value="Hand" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <!--  Back Button  -->
        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Background" Value="Red" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Padding" Value="10,5" />

            <!--  Hover Effect  -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5F84FF" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="Cursor" Value="Hand" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <!--  Text changed when user write  -->
        <other:EmptyTextToVisibilityConverter x:Key="EmptyTextToVisibilityConverter" />

    </Page.Resources>

    <Grid Background="#E8E8E8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.07*" />
            <RowDefinition Height="0.14*" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--  Top  -->
        <Grid
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Background="#57AEFF">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*" />
                <ColumnDefinition />
                <ColumnDefinition Width="0.6*" />
            </Grid.ColumnDefinitions>

            <!--  Log Out Button  -->
            <Grid Grid.Column="2">
                <Button
                    Width="150"
                    Margin="0,-1,79,-1"
                    Background="#57AEFF"
                    BorderBrush="Transparent"
                    Click="Logout_Click"
                    Content="Log Out"
                    FontFamily="Times New Roman"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="Red" />

                <Button
                    Width="20"
                    Margin="199,-1,10,-1"
                    Background="#57AEFF"
                    BorderBrush="Transparent"
                    Click="Close_Click"
                    Content="X"
                    FontFamily="Times New Roman"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="Red"
                    RenderTransformOrigin="-1.084,0.562" />

                <Button
                    Width="20"
                    Margin="155,-1,54,0"
                    VerticalAlignment="Center"
                    Background="#57AEFF"
                    BorderBrush="Transparent"
                    Click="Minimize_Click"
                    Content="_"
                    FontFamily="Times New Roman"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="Red" />
            </Grid>

            <!--  Home Buttons  -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <!--  Home Button  -->
                <Button
                    Grid.Column="0"
                    Width="50"
                    Height="30"
                    Background="#57AEFF"
                    BorderBrush="Transparent"
                    Click="Home_Click"
                    Content="Home"
                    FontFamily="Times New Roman"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="Red" />
            </Grid>
        </Grid>

        <!--  Buttons  -->
        <Grid Grid.Row="2" Grid.Column="0">
            <StackPanel
                Width="Auto"
                Height="auto"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <Button
                    Width="180"
                    Height="32"
                    Click="New_Click"
                    Content="New"
                    FontFamily="Times New Roman"
                    Style="{StaticResource RoundedButtonStyle}" />
                <Button
                    Width="180"
                    Height="32"
                    Margin="0,20,0,0"
                    Click="Edit_Click"
                    Content="Edit"
                    FontFamily="Times New Roman"
                    Style="{StaticResource RoundedButtonStyle}" />
                <Button
                    Width="180"
                    Height="32"
                    Margin="0,20,0,0"
                    Click="Delete_Click"
                    Content="Delete"
                    FontFamily="Times New Roman"
                    Style="{StaticResource RoundedButtonStyle}" />
                <!--  Add spacer  -->
                <Border Height="180" />
            </StackPanel>
        </Grid>

        <!--  Search and Refresh  -->
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15*" />
                <ColumnDefinition Width="26*" />
                <ColumnDefinition Width="19*" />
                <ColumnDefinition Width="15*" />
            </Grid.ColumnDefinitions>

            <!--  search bar  -->
            <Grid Grid.Column="1">
                <Border
                    Width="200"
                    Height="30"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="White"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    CornerRadius="15">
                    <Grid>
                        <!--  Placeholder Text  -->
                        <TextBlock
                            x:Name="PlaceholderText"
                            Margin="10,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Foreground="Gray"
                            IsHitTestVisible="False"
                            Text="Enter text here..."
                            Visibility="{Binding Text, ElementName=RoundedTextBox, Converter={StaticResource EmptyTextToVisibilityConverter}}" />
                        <!--  TextBox  -->
                        <TextBox
                            x:Name="RoundedTextBox"
                            Padding="10,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="Black" />
                    </Grid>
                </Border>
            </Grid>

            <!--  Buttons for search and Refresh  -->
            <Grid Grid.Column="2" Grid.ColumnSpan="2">
                <Button
                    Width="120"
                    Height="30"
                    HorizontalAlignment="Left"
                    Click="Search_Click"
                    Content="Search"
                    FontFamily="Times new roman"
                    Style="{StaticResource SrchRefButtonStyle}" />
                <Button
                    Width="120"
                    Height="30"
                    Margin="136,11,0,11"
                    HorizontalAlignment="Left"
                    Click="Refresh_Click"
                    Content="Refresh"
                    FontFamily="Times new roman"
                    Style="{StaticResource SrchRefButtonStyle}" />
            </Grid>

        </Grid>

        <!--  List for the info  -->
        <Grid Grid.Row="2" Grid.Column="1">
            <!--  Outer Container  -->
            <Border
                Margin="10"
                Padding="10"
                Background="#FFFFFF"
                BorderBrush="#CCCCCC"
                BorderThickness="1"
                CornerRadius="15">
                <!--  Users ListView  -->
                <ListView
                    x:Name="SalesListView"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    AlternationCount="2"
                    Background="Transparent"
                    BorderThickness="0"
                    Visibility="Visible">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn
                                Width="70"
                                DisplayMemberBinding="{Binding UserID}"
                                Header="User ID" />
                            <GridViewColumn
                                Width="160"
                                DisplayMemberBinding="{Binding FirstName}"
                                Header="First Name" />
                            <GridViewColumn
                                Width="160"
                                DisplayMemberBinding="{Binding LastName}"
                                Header="Last Name" />
                            <GridViewColumn
                                Width="160"
                                DisplayMemberBinding="{Binding Email}"
                                Header="Email" />
                            <GridViewColumn
                                Width="160"
                                DisplayMemberBinding="{Binding Username}"
                                Header="Username" />
                            <GridViewColumn
                                Width="160"
                                DisplayMemberBinding="{Binding Phone}"
                                Header="Phone Number" />
                            <GridViewColumn
                                Width="160"
                                DisplayMemberBinding="{Binding Role}"
                                Header="Role" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </Border>
        </Grid>

        <!--  Loding indicator  -->
        <TextBlock
            x:Name="LoadingIndicator"
            Grid.Row="1"
            Grid.Column="1"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontSize="14"
            Foreground="Gray"
            Text="Loading..."
            Visibility="Collapsed" />
        <!--  container to add or update User  -->
        <Border
            x:Name="Conatiner_User"
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="1"
            Margin="20"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="#E8E8E8"
            BorderBrush="Black"
            BorderThickness="2"
            CornerRadius="40"
            Visibility="Collapsed">

            <!--  Grid to Hold Everything  -->
            <Grid>
                <Grid.RowDefinitions>
                    <!--  Title  -->
                    <RowDefinition Height="0.2*" />
                    <!--  Scrollable Form  -->
                    <RowDefinition Height="*" />
                    <!--  Submit Button  -->
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Title  -->
                <TextBlock
                    Grid.Row="0"
                    Margin="0,10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="24"
                    FontWeight="Bold"
                    Text="User Information" />

                <!--  Scrollable Content  -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--  First Name  -->
                        <StackPanel
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="10">
                            <Border
                                Padding="5"
                                BorderBrush="Violet"
                                BorderThickness="0,0,0,2">
                                <Grid>
                                    <TextBlock
                                        Margin="5,0,0,0"
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        Foreground="Gray"
                                        IsHitTestVisible="False"
                                        Text="First Name"
                                        Visibility="{Binding Text, ElementName=FirstNameTextBox, Converter={StaticResource EmptyTextToVisibilityConverter}}" />
                                    <TextBox
                                        x:Name="FirstNameTextBox"
                                        Padding="5,0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontSize="14"
                                        Foreground="Black" />
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!--  Last Name  -->
                        <StackPanel
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="10">
                            <Border
                                Padding="5"
                                BorderBrush="Violet"
                                BorderThickness="0,0,0,2">
                                <Grid>
                                    <TextBlock
                                        Margin="5,0,0,0"
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        Foreground="Gray"
                                        IsHitTestVisible="False"
                                        Text="Last Name"
                                        Visibility="{Binding Text, ElementName=LastNameTextBox, Converter={StaticResource EmptyTextToVisibilityConverter}}" />
                                    <TextBox
                                        x:Name="LastNameTextBox"
                                        Padding="5,0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontSize="14"
                                        Foreground="Black" />
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!--  Phone  -->
                        <StackPanel Grid.Row="2" Margin="10">
                            <Border
                                Padding="5"
                                BorderBrush="Violet"
                                BorderThickness="0,0,0,2">
                                <Grid>
                                    <TextBlock
                                        Margin="5,0,0,0"
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        Foreground="Gray"
                                        IsHitTestVisible="False"
                                        Text="Phone Number"
                                        Visibility="{Binding Text, ElementName=PhoneTextBox, Converter={StaticResource EmptyTextToVisibilityConverter}}" />
                                    <TextBox
                                        x:Name="PhoneTextBox"
                                        Padding="5,0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontSize="14"
                                        Foreground="Black" />
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!--  Email  -->
                        <StackPanel
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="10">
                            <Border
                                Padding="5"
                                BorderBrush="Violet"
                                BorderThickness="0,0,0,2">
                                <Grid>
                                    <TextBlock
                                        Margin="5,0,0,0"
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        Foreground="Gray"
                                        IsHitTestVisible="False"
                                        Text="Email"
                                        Visibility="{Binding Text, ElementName=EmailTextBox, Converter={StaticResource EmptyTextToVisibilityConverter}}" />
                                    <TextBox
                                        x:Name="EmailTextBox"
                                        Padding="5,0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontSize="14"
                                        Foreground="Black" />
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!--  Username  -->
                        <StackPanel
                            Grid.Row="4"
                            Grid.ColumnSpan="2"
                            Margin="10">
                            <Border
                                Padding="5"
                                BorderBrush="Violet"
                                BorderThickness="0,0,0,2">
                                <Grid>
                                    <TextBlock
                                        Margin="5,0,0,0"
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        Foreground="Gray"
                                        IsHitTestVisible="False"
                                        Text="Username"
                                        Visibility="{Binding Text, ElementName=UsernameTextBox, Converter={StaticResource EmptyTextToVisibilityConverter}}" />
                                    <TextBox
                                        x:Name="UsernameTextBox"
                                        Padding="5,0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontSize="14"
                                        Foreground="Black" />
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!--  Password  -->
                        <StackPanel
                            Grid.Row="6"
                            Grid.Column="0"
                            Margin="10">
                            <Border
                                Padding="5"
                                BorderBrush="Violet"
                                BorderThickness="0,0,0,2">
                                <Grid>
                                    <!--  Placeholder Text  -->
                                    <TextBlock
                                        x:Name="PasswordPlaceholder"
                                        Margin="5,0,0,0"
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        Foreground="Gray"
                                        IsHitTestVisible="False"
                                        Text="Password"
                                        Visibility="Visible" />

                                    <!--  Password TextBox (Instead of PasswordBox)  -->
                                    <TextBox
                                        x:Name="PasswordTextBox"
                                        Padding="5,0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontSize="14"
                                        Foreground="Black"
                                        GotFocus="PasswordTextBox_GotFocus"
                                        LostFocus="PasswordTextBox_LostFocus"
                                        TextChanged="PasswordTextBox_TextChanged" />
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!--  Confirm Password  -->
                        <StackPanel
                            Grid.Row="6"
                            Grid.Column="1"
                            Margin="10">
                            <Border
                                Padding="5"
                                BorderBrush="Violet"
                                BorderThickness="0,0,0,2">
                                <Grid>
                                    <!--  Placeholder Text  -->
                                    <TextBlock
                                        x:Name="ConfirmPasswordPlaceholder"
                                        Margin="5,0,0,0"
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        Foreground="Gray"
                                        IsHitTestVisible="False"
                                        Text="Confirm Password"
                                        Visibility="Visible" />

                                    <!--  Password TextBox (Instead of PasswordBox)  -->
                                    <TextBox
                                        x:Name="ConfirmPasswordTextBox"
                                        Padding="5,0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontSize="14"
                                        Foreground="Black"
                                        GotFocus="PasswordTextBox_GotFocus"
                                        LostFocus="PasswordTextBox_LostFocus"
                                        TextChanged="PasswordTextBox_TextChanged" />
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!--  Address  -->
                        <StackPanel
                            Grid.Row="8"
                            Grid.ColumnSpan="2"
                            Margin="10">
                            <Border
                                Padding="5"
                                BorderBrush="Violet"
                                BorderThickness="0,0,0,2">
                                <Grid>
                                    <TextBlock
                                        Margin="5,0,0,0"
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        Foreground="Gray"
                                        IsHitTestVisible="False"
                                        Text="Address"
                                        Visibility="{Binding Text, ElementName=AddressTextBox, Converter={StaticResource EmptyTextToVisibilityConverter}}" />
                                    <TextBox
                                        x:Name="AddressTextBox"
                                        Padding="5,0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontSize="14"
                                        Foreground="Black" />
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!--  Role (Dropdown)  -->
                        <StackPanel
                            Grid.Row="10"
                            Grid.ColumnSpan="2"
                            Margin="10">
                            <TextBlock
                                Margin="0,0,0,5"
                                FontSize="14"
                                FontWeight="Bold"
                                Text="Role" />
                            <ComboBox
                                x:Name="RoleComboBox"
                                Height="35"
                                BorderBrush="Violet"
                                BorderThickness="1"
                                FontSize="14"
                                ItemsSource="{Binding Roles}"
                                SelectedIndex="0">
                                <ComboBoxItem Content="Admin" />
                                <ComboBoxItem Content="Selling Staff" />
                                <ComboBoxItem Content="Stock Staff" />
                            </ComboBox>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>

                <!--  Buttons (Outside ScrollViewer)  -->

                <Button
                    x:Name="Submitbtn"
                    Grid.Row="2"
                    Width="150"
                    Height="40"
                    Margin="80,20,0,20"
                    HorizontalAlignment="Left"
                    Click="Submit_Click"
                    Content="Submit"
                    FontFamily="Times New Roman"
                    Style="{StaticResource NewOrEditButtonStyle}"
                    Visibility="Visible" />

                <Button
                    x:Name="Updatebtn"
                    Grid.Row="2"
                    Width="150"
                    Height="40"
                    Margin="80,20,0,20"
                    HorizontalAlignment="Left"
                    Click="Update_Click"
                    Content="Update"
                    FontFamily="Times New Roman"
                    Style="{StaticResource NewOrEditButtonStyle}"
                    Visibility="Collapsed" />

                <Button
                    Grid.Row="2"
                    Width="150"
                    Height="40"
                    Margin="0,20,80,20"
                    HorizontalAlignment="Right"
                    Click="Back_Click"
                    Content="Back"
                    FontFamily="Times New Roman"
                    Style="{StaticResource BackButtonStyle}" />
            </Grid>
        </Border>
    </Grid>
</Page>
