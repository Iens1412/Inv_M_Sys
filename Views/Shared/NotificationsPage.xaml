<Page
    x:Class="Inv_M_Sys.Views.Shared.NotificationsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Inv_M_Sys.Views.Shared"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="NotificationsPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Page.Resources>
        <!--  Rounded desgin for buttons  -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Background" Value="Red" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Padding" Value="10,5" />

            <!--  Hover Effect  -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5F84FF" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="Cursor" Value="Hand" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid Background="#E8E8E8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.07*" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--  Top  -->
        <Grid
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Background="#57AEFF">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*" />
                <ColumnDefinition />
                <ColumnDefinition Width="0.6*" />
            </Grid.ColumnDefinitions>

            <!--  Log Out Button  -->
            <Grid Grid.Column="2">
                <Button
                    Width="150"
                    Margin="0,-1,79,-1"
                    Background="#57AEFF"
                    BorderBrush="Transparent"
                    Content="Log Out"
                    FontFamily="Times New Roman"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="Red" />

                <Button
                    Width="20"
                    Margin="199,-1,10,-1"
                    Background="#57AEFF"
                    BorderBrush="Transparent"
                    Content="X"
                    FontFamily="Times New Roman"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="Red"
                    RenderTransformOrigin="-1.084,0.562" />

                <Button
                    Width="20"
                    Margin="155,-1,54,-1"
                    Background="#57AEFF"
                    BorderBrush="Transparent"
                    Content="⬜"
                    FontFamily="Times New Roman"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="Red"
                    RenderTransformOrigin="-1.084,0.562" />
            </Grid>

            <!--  Note And Home Buttons  -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <!--  Notifications Button  -->
                <Button
                    Grid.Column="1"
                    Width="50"
                    Height="30"
                    Background="#57AEFF"
                    BorderBrush="Transparent">
                    <Canvas Width="20" Height="20">
                        <Path
                            Canvas.Top="-2"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            Data="M12 2a7 7 0 00-7 7v2a5 5 0 00-2 4v1h18v-1a5 5 0 00-2-4V9a7 7 0 00-7-7z M12 22c1.1 0 2-.9 2-2h-4c0 1.1.9 2 2 2z"
                            Fill="Yellow" />
                    </Canvas>
                </Button>

                <!--  Home Button  -->
                <Button
                    Grid.Column="0"
                    Width="50"
                    Height="30"
                    Background="#57AEFF"
                    BorderBrush="Transparent"
                    Content="Home"
                    FontFamily="Times New Roman"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="Red" />
            </Grid>
        </Grid>

        <!--  notifications text place  -->
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <!--  Content TextBlock (Takes the rest of the space)  -->
            </Grid.RowDefinitions>

            <!--  Title Label  -->
            <Label
                Grid.Row="0"
                Width="70"
                Height="40"
                Margin="0,10,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Content="Title"
                FontFamily="Times New Roman"
                FontSize="28"
                FontWeight="Bold"
                Foreground="Red" />

            <!--  Title TextBlock  -->
            <Border
                Grid.Row="1"
                Height="30"
                Margin="20,10,20,0"
                Padding="5"
                Background="White"
                BorderBrush="Gray"
                BorderThickness="1"
                CornerRadius="10">
                <TextBlock FontFamily="Times New Roman" Foreground="Black" />
            </Border>

            <!--  Content Label  -->
            <Label
                Grid.Row="2"
                Width="113"
                Height="40"
                Margin="0,10,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Content="Content"
                FontFamily="Times New Roman"
                FontSize="28"
                FontWeight="Bold"
                Foreground="Red" />

            <!--  Content TextBlock (Expands to fill the remaining space)  -->
            <Border
                Grid.Row="3"
                Margin="20,10,20,10"
                Padding="10"
                Background="White"
                BorderBrush="Gray"
                BorderThickness="1"
                CornerRadius="10">
                <TextBlock
                    FontFamily="Times New Roman"
                    Foreground="Black"
                    TextWrapping="Wrap" />
            </Border>
        </Grid>
        <!--  Buttons and list for notifications  -->
        <Grid Grid.Row="2" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Outer Container with ListView  -->
            <Border
                Grid.Row="0"
                Margin="10"
                Padding="10"
                Background="#FFFFFF"
                BorderBrush="#CCCCCC"
                BorderThickness="1"
                CornerRadius="15">

                <ListView
                    x:Name="SalesListView"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    AlternationCount="2"
                    Background="Transparent"
                    BorderThickness="0"
                    Visibility="Visible">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn
                                Width="20"
                                DisplayMemberBinding="{Binding SaleID}"
                                Header=" ID" />
                            <GridViewColumn
                                Width="140"
                                DisplayMemberBinding="{Binding Product}"
                                Header="Title" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </Border>

            <!--  Buttons Row  -->
            <StackPanel
                Grid.Row="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Orientation="Vertical">
                <Button
                    Width="180"
                    Height="32"
                    Margin="0,0,0,10"
                    Content="Clear"
                    FontFamily="Times New Roman"
                    Style="{StaticResource RoundedButtonStyle}" />
                <Button
                    Width="180"
                    Height="32"
                    Margin="0,0,0,10"
                    Content="Delete"
                    FontFamily="Times New Roman"
                    Style="{StaticResource RoundedButtonStyle}" />
            </StackPanel>
        </Grid>
    </Grid>
</Page>
