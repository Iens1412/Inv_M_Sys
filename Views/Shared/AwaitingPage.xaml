<Page
    x:Class="Inv_M_Sys.Views.Shared.AwaitingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Inv_M_Sys.Views.Shared"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:other="clr-namespace:Inv_M_Sys.Converter"
    Title="AwaitingPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Page.Resources>
        <!--  Action Buttons  -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Background" Value="Red" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Padding" Value="10,5" />

            <!--  Hover Effect  -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5F84FF" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="Cursor" Value="Hand" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <!--  Search and refresh  -->
        <Style x:Key="SrchRefButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Background" Value="#02C125" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Padding" Value="10,5" />

            <!--  Hover Effect  -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5F84FF" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="Cursor" Value="Hand" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <!--  New OR Edit Buttons  -->
        <Style x:Key="NewOrEditButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Background" Value="#D88500" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Padding" Value="10,5" />

            <!--  Hover Effect  -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5F84FF" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="Cursor" Value="Hand" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <!--  Back Button  -->
        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Background" Value="Red" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Padding" Value="10,5" />

            <!--  Hover Effect  -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5F84FF" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="Cursor" Value="Hand" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <other:RestoreButtonVisibilityConverter x:Key="RestoreButtonVisibilityConverter" />
        <other:EmptyTextToVisibilityConverter x:Key="EmptyTextToVisibilityConverter" />

    </Page.Resources>

    <Grid Background="#E8E8E8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.07*" />
            <RowDefinition Height="0.14*" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--  Top  -->
        <Grid
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Background="#57AEFF">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*" />
                <ColumnDefinition />
                <ColumnDefinition Width="0.6*" />
            </Grid.ColumnDefinitions>

            <!--  Log Out Button  -->
            <Grid Grid.Column="2">
                <Button
                    Width="150"
                    Margin="0,-1,79,-1"
                    Background="#57AEFF"
                    BorderBrush="Transparent"
                    Click="Logout_Click"
                    Content="Log Out"
                    FontFamily="Times New Roman"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="Red" />

                <Button
                    Width="20"
                    Margin="199,-1,10,-1"
                    Background="#57AEFF"
                    BorderBrush="Transparent"
                    Click="Close_Click"
                    Content="X"
                    FontFamily="Times New Roman"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="Red"
                    RenderTransformOrigin="-1.084,0.562" />

                <Button
                    Width="20"
                    Margin="155,-1,54,-1"
                    Background="#57AEFF"
                    BorderBrush="Transparent"
                    Click="Minimize_Click"
                    Content="--"
                    FontFamily="Times New Roman"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="Red"
                    RenderTransformOrigin="-1.084,0.562" />
            </Grid>

            <!--  Home Buttons  -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <!--  Home Button  -->
                <Button
                    Grid.Column="0"
                    Width="50"
                    Height="30"
                    Background="#57AEFF"
                    BorderBrush="Transparent"
                    Click="Home_Click"
                    Content="Home"
                    FontFamily="Times New Roman"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="Red" />
            </Grid>
        </Grid>

        <!--  Buttons  -->
        <Grid Grid.Row="2" Grid.Column="0">
            <StackPanel
                Width="Auto"
                Height="auto"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <Button
                    Width="180"
                    Height="32"
                    Command="{Binding OpenCommand}"
                    Content="Open"
                    FontFamily="Times New Roman"
                    Style="{StaticResource RoundedButtonStyle}" />
                <Button
                    Width="180"
                    Height="32"
                    Margin="0,20,0,0"
                    Command="{Binding DeleteCommand}"
                    Content="Delete"
                    FontFamily="Times New Roman"
                    Style="{StaticResource RoundedButtonStyle}" />
                <!--  Add spacer  -->
                <Border Height="180" />
                <Button
                    Width="180"
                    Height="32"
                    Command="{Binding RestoreCommand}"
                    Content="Restore Order"
                    FontFamily="Times New Roman"
                    Style="{StaticResource RoundedButtonStyle}">
                    <Button.Visibility>
                        <Binding Converter="{StaticResource RestoreButtonVisibilityConverter}" Path="SelectedFilter" />
                    </Button.Visibility>
                </Button>
            </StackPanel>
        </Grid>

        <!--  Combobox for the oreder that deletet or not  -->
        <ComboBox
            x:Name="FilterComboBox"
            Grid.Row="1"
            Grid.Column="0"
            Width="120"
            Height="10"
            MinHeight="30"
            Margin="20,0,0,0"
            HorizontalAlignment="Left"
            ItemsSource="{Binding FilterOptions}"
            SelectedIndex="0"
            SelectedItem="{Binding SelectedFilter, Mode=TwoWay}" />

        <!--  Search and Refresh  -->
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15*" />
                <ColumnDefinition Width="26*" />
                <ColumnDefinition Width="19*" />
                <ColumnDefinition Width="15*" />
            </Grid.ColumnDefinitions>

            <!--  ComboBox for Search  -->
            <ComboBox
                x:Name="SearchComboBox"
                Grid.Column="0"
                Width="150"
                MinHeight="30"
                MaxHeight="35"
                Margin="-55,0,0,0"
                Padding="10,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Background="White"
                BorderBrush="#D1D1D1"
                BorderThickness="1"
                FontFamily="Segoe UI"
                FontSize="14"
                FontWeight="SemiBold"
                Foreground="Black"
                IsEditable="False"
                ItemsSource="{Binding SearchCriteriaOptions}"
                SelectedIndex="0"
                SelectedItem="{Binding SelectedSearchCriteria, Mode=TwoWay}" />

            <!--  search bar  -->
            <Grid Grid.Column="1">
                <Border
                    Width="200"
                    Height="30"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="White"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    CornerRadius="15">
                    <Grid>
                        <!--  Placeholder Text  -->
                        <TextBlock
                            x:Name="PlaceholderText"
                            Margin="10,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Foreground="Gray"
                            IsHitTestVisible="False"
                            Text="Enter text here..."
                            Visibility="{Binding Text, ElementName=RoundedTextBox, Converter={StaticResource EmptyTextToVisibilityConverter}}" />
                        <!--  TextBox  -->
                        <TextBox
                            x:Name="RoundedTextBox"
                            Padding="10,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="Black"
                            Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}" />
                    </Grid>
                </Border>
            </Grid>

            <!--  Buttons for search and Refresh  -->
            <Grid Grid.Column="2" Grid.ColumnSpan="2">
                <Button
                    Width="120"
                    Height="30"
                    HorizontalAlignment="Left"
                    Command="{Binding SearchCommand}"
                    Content="Search"
                    FontFamily="Times new roman"
                    Style="{StaticResource SrchRefButtonStyle}" />
                <Button
                    Width="120"
                    Height="30"
                    Margin="136,11,0,11"
                    HorizontalAlignment="Left"
                    Command="{Binding RefreshCommand}"
                    Content="Refresh"
                    FontFamily="Times new roman"
                    Style="{StaticResource SrchRefButtonStyle}" />
            </Grid>

        </Grid>

        <!--  List for the info  -->
        <Grid Grid.Row="2" Grid.Column="1">
            <!--  Outer Container  -->
            <Border
                Margin="10"
                Padding="10"
                Background="#FFFFFF"
                BorderBrush="#CCCCCC"
                BorderThickness="1"
                CornerRadius="15">

                <StackPanel>
                    <!--  Orders ListView  -->
                    <ListView
                        x:Name="OrdersListView"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        AlternationCount="2"
                        Background="Transparent"
                        BorderThickness="0"
                        ItemsSource="{Binding OrdersList}"
                        SelectedItem="{Binding SelectedOrder}"
                        Visibility="Visible">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn
                                    Width="100"
                                    DisplayMemberBinding="{Binding Id}"
                                    Header="Order ID" />
                                <GridViewColumn
                                    Width="150"
                                    DisplayMemberBinding="{Binding CustomerName}"
                                    Header="Customer" />
                                <GridViewColumn
                                    Width="150"
                                    DisplayMemberBinding="{Binding DeliveryDate}"
                                    Header="Delivery Date" />
                                <GridViewColumn
                                    Width="100"
                                    DisplayMemberBinding="{Binding TotalPrice}"
                                    Header="Total Price" />
                                <GridViewColumn
                                    Width="100"
                                    DisplayMemberBinding="{Binding Status}"
                                    Header="Status" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>
            </Border>
        </Grid>

        <!--  Continer for the order info  -->
        <Border
            x:Name="OrderInfoContainer"
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="1"
            Margin="20"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="#E8E8E8"
            BorderBrush="Black"
            BorderThickness="2"
            CornerRadius="40"
            Visibility="Collapsed">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Title  -->
                <TextBlock
                    Grid.Row="0"
                    Margin="0,10"
                    HorizontalAlignment="Center"
                    FontFamily="Times New Roman"
                    FontSize="24"
                    FontWeight="Bold"
                    Text="Order Information" />

                <!--  Scrollable Form  -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!--  Order ID  -->
                        <StackPanel
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="10">
                            <TextBlock
                                Margin="0,0,0,5"
                                FontWeight="Bold"
                                Text="Order ID" />
                            <TextBox
                                Background="Transparent"
                                BorderBrush="Violet"
                                BorderThickness="0,0,0,2"
                                FontSize="14"
                                IsReadOnly="True"
                                Text="{Binding SelectedOrder.Id}" />
                        </StackPanel>

                        <!--  Customer Name  -->
                        <StackPanel
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="10">
                            <TextBlock
                                Margin="0,0,0,5"
                                FontWeight="Bold"
                                Text="Customer" />
                            <TextBox
                                Background="Transparent"
                                BorderBrush="Violet"
                                BorderThickness="0,0,0,2"
                                FontSize="14"
                                IsReadOnly="True"
                                Text="{Binding SelectedOrder.CustomerName}" />
                        </StackPanel>

                        <!--  Delivery Date  -->
                        <StackPanel
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="10">
                            <TextBlock
                                Margin="0,0,0,5"
                                FontWeight="Bold"
                                Text="Delivery Date" />
                            <TextBox
                                Background="Transparent"
                                BorderBrush="Violet"
                                BorderThickness="0,0,0,2"
                                FontSize="14"
                                IsReadOnly="True"
                                Text="{Binding SelectedOrder.DeliveryDate, StringFormat='yyyy-MM-dd'}" />
                        </StackPanel>

                        <!--  Total Price  -->
                        <StackPanel
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="10">
                            <TextBlock
                                Margin="0,0,0,5"
                                FontWeight="Bold"
                                Text="Total Price" />
                            <TextBox
                                Background="Transparent"
                                BorderBrush="Violet"
                                BorderThickness="0,0,0,2"
                                FontSize="14"
                                IsReadOnly="True"
                                Text="{Binding SelectedOrder.TotalPrice, StringFormat=F2}" />
                        </StackPanel>

                        <!--  Status  -->
                        <StackPanel
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="10">
                            <TextBlock
                                Margin="0,0,0,5"
                                FontWeight="Bold"
                                Text="Status" />
                            <ComboBox
                                BorderBrush="Violet"
                                BorderThickness="1"
                                FontSize="14"
                                ItemsSource="{Binding StatusOptions}"
                                SelectedItem="{Binding SelectedOrder.Status, Mode=TwoWay}" />
                        </StackPanel>

                        <!--  Order Items  -->
                        <StackPanel
                            Grid.Row="3"
                            Grid.ColumnSpan="2"
                            Margin="10">
                            <TextBlock
                                Margin="0,0,0,5"
                                FontWeight="Bold"
                                Text="Order Items" />
                            <ListView
                                Height="150"
                                AlternationCount="2"
                                Background="White"
                                BorderBrush="Violet"
                                BorderThickness="1"
                                ItemsSource="{Binding OrderItems}">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn
                                            Width="200"
                                            DisplayMemberBinding="{Binding Product.Name}"
                                            Header="Product" />
                                        <GridViewColumn
                                            Width="80"
                                            DisplayMemberBinding="{Binding Quantity}"
                                            Header="Quantity" />
                                        <GridViewColumn
                                            Width="80"
                                            DisplayMemberBinding="{Binding Product.Price}"
                                            Header="Price" />
                                        <GridViewColumn
                                            Width="100"
                                            DisplayMemberBinding="{Binding TotalPrice}"
                                            Header="Total" />
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>

                <!--  Action Buttons  -->
                <StackPanel
                    Grid.Row="2"
                    Margin="10"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <Button
                        Width="150"
                        Height="40"
                        Command="{Binding UpdateStatusCommand}"
                        Content="Update"
                        FontFamily="Times New Roman"
                        Style="{StaticResource NewOrEditButtonStyle}" />
                    <Button
                        Width="150"
                        Height="40"
                        Margin="10,0,0,0"
                        Click="Back_Click"
                        Content="Back"
                        FontFamily="Times New Roman"
                        Style="{StaticResource BackButtonStyle}" />
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</Page>
