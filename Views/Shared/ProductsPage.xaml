<Page
    x:Class="Inv_M_Sys.Views.Shared.ProductsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Inv_M_Sys.Views.Shared"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:other="clr-namespace:Inv_M_Sys.Converter"
    xmlns:vm="clr-namespace:Inv_M_Sys.ViewModels"
    Title="ProductsPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Unloaded="Page_Unloaded"
    mc:Ignorable="d">

    <Page.DataContext>
        <vm:ProductsPageViewModel />
    </Page.DataContext>

    <Page.Resources>
        <!--  Action Buttons  -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Background" Value="Red" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Padding" Value="10,5" />

            <!--  Hover Effect  -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5F84FF" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="Cursor" Value="Hand" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <!--  Search and refresh  -->
        <Style x:Key="SrchRefButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Background" Value="#02C125" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Padding" Value="10,5" />

            <!--  Hover Effect  -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5F84FF" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="Cursor" Value="Hand" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <!--  New OR Edit Buttons  -->
        <Style x:Key="NewOrEditButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Background" Value="#D88500" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Padding" Value="10,5" />

            <!--  Hover Effect  -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5F84FF" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="Cursor" Value="Hand" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <!--  Back Button  -->
        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Background" Value="Red" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Padding" Value="10,5" />

            <!--  Hover Effect  -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5F84FF" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="Cursor" Value="Hand" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <other:EmptyTextToVisibilityConverter x:Key="EmptyTextToVisibilityConverter" />
        <other:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Page.Resources>

    <Grid Background="#E8E8E8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.07*" />
            <RowDefinition Height="0.14*" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--  Top  -->
        <Grid
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Background="#57AEFF">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*" />
                <ColumnDefinition />
                <ColumnDefinition Width="0.6*" />
            </Grid.ColumnDefinitions>

            <!--  Log Out Button  -->
            <Grid Grid.Column="2">
                <Button
                    Width="150"
                    Margin="0,-1,79,-1"
                    Background="#57AEFF"
                    BorderBrush="Transparent"
                    Click="Logout_Click"
                    Content="Log Out"
                    FontFamily="Times New Roman"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="Red" />

                <Button
                    Width="20"
                    Margin="199,-1,10,-1"
                    Background="#57AEFF"
                    BorderBrush="Transparent"
                    Click="Close_Click"
                    Content="X"
                    FontFamily="Times New Roman"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="Red"
                    RenderTransformOrigin="-1.084,0.562" />

                <Button
                    Width="20"
                    Margin="155,-1,54,-1"
                    Background="#57AEFF"
                    BorderBrush="Transparent"
                    Click="Minimize_Click"
                    Content="--"
                    FontFamily="Times New Roman"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="Red"
                    RenderTransformOrigin="-1.084,0.562" />
            </Grid>

            <!--  Home Buttons  -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <!--  Home Button  -->
                <Button
                    Grid.Column="0"
                    Width="50"
                    Height="30"
                    Background="#57AEFF"
                    BorderBrush="Transparent"
                    Click="Home_Click"
                    Content="Home"
                    FontFamily="Times New Roman"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="Red" />
            </Grid>
        </Grid>

        <!--  Buttons  -->
        <Grid Grid.Row="2" Grid.Column="0">
            <StackPanel
                Width="Auto"
                Height="auto"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <Button
                    Width="180"
                    Height="32"
                    Command="{Binding NewProductFormCommand}"
                    Content="New"
                    FontFamily="Times New Roman"
                    Style="{StaticResource RoundedButtonStyle}" />
                <Button
                    Width="180"
                    Height="32"
                    Margin="0,20,0,0"
                    Command="{Binding EditProductFormCommand}"
                    Content="Edit"
                    FontFamily="Times New Roman"
                    Style="{StaticResource RoundedButtonStyle}" />
                <Button
                    Width="180"
                    Height="32"
                    Margin="0,20,0,0"
                    Command="{Binding DeleteProductCommand}"
                    Content="Delete"
                    FontFamily="Times New Roman"
                    Style="{StaticResource RoundedButtonStyle}" />
                <!--  Add spacer  -->
                <Border Height="180" />
            </StackPanel>
        </Grid>

        <!--  Search and Refresh  -->
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15*" />
                <ColumnDefinition Width="26*" />
                <ColumnDefinition Width="19*" />
                <ColumnDefinition Width="15*" />
            </Grid.ColumnDefinitions>

            <!--  ComboBox for Search  -->
            <ComboBox
                x:Name="SearchComboBox"
                Grid.Column="0"
                Width="150"
                MinHeight="30"
                MaxHeight="35"
                Margin="-55,0,0,0"
                Padding="10,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Background="White"
                BorderBrush="#D1D1D1"
                BorderThickness="1"
                FontFamily="Segoe UI"
                FontSize="14"
                FontWeight="SemiBold"
                Foreground="Black"
                IsEditable="False"
                SelectedIndex="0"
                SelectedValue="{Binding SearchFilter, Mode=TwoWay}"
                SelectedValuePath="Content">
                <!--  IsEditable set to False to prevent typing  -->
                <ComboBoxItem Content="Name" />
                <ComboBoxItem Content="Category" />
                <ComboBoxItem Content="Supplier" />
                <ComboBoxItem Content="ID" />
            </ComboBox>

            <!--  search bar  -->
            <Grid Grid.Column="1">
                <Border
                    Width="200"
                    Height="30"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="White"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    CornerRadius="15">
                    <Grid>
                        <!--  Placeholder Text  -->
                        <TextBlock
                            x:Name="PlaceholderText"
                            Margin="10,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Foreground="Gray"
                            IsHitTestVisible="False"
                            Text="Enter text here..."
                            Visibility="{Binding Text, ElementName=RoundedTextBox, Converter={StaticResource EmptyTextToVisibilityConverter}}" />
                        <!--  TextBox  -->
                        <TextBox
                            x:Name="RoundedTextBox"
                            Padding="10,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="Black"
                            Text="{Binding SearchQuery, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </Grid>
                </Border>
            </Grid>

            <!--  Buttons for search and Refresh  -->
            <Grid Grid.Column="2" Grid.ColumnSpan="2">
                <Button
                    Width="120"
                    Height="30"
                    HorizontalAlignment="Left"
                    Command="{Binding SearchCommand}"
                    Content="Search"
                    FontFamily="Times new roman"
                    Style="{StaticResource SrchRefButtonStyle}" />
                <Button
                    Width="120"
                    Height="30"
                    Margin="136,11,0,11"
                    HorizontalAlignment="Left"
                    Command="{Binding RefreshCommand}"
                    Content="Refresh"
                    FontFamily="Times new roman"
                    Style="{StaticResource SrchRefButtonStyle}" />
            </Grid>

        </Grid>

        <!--  List for the info  -->
        <Grid Grid.Row="2" Grid.Column="1">
            <!--  Outer Container  -->
            <Border
                Margin="10"
                Padding="10"
                Background="#FFFFFF"
                BorderBrush="#CCCCCC"
                BorderThickness="1"
                CornerRadius="15">

                <StackPanel>
                    <!--  Products ListView  -->
                    <ListView
                        x:Name="ProductListView"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        AlternationCount="2"
                        Background="Transparent"
                        BorderThickness="0"
                        ItemsSource="{Binding ProductsList}"
                        SelectedItem="{Binding SelectedProduct, Mode=TwoWay}"
                        Visibility="Visible">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn
                                    Width="100"
                                    DisplayMemberBinding="{Binding Id}"
                                    Header="ID" />
                                <GridViewColumn
                                    Width="200"
                                    DisplayMemberBinding="{Binding Name}"
                                    Header="Name" />
                                <GridViewColumn
                                    Width="150"
                                    DisplayMemberBinding="{Binding CategoryName}"
                                    Header="Category" />
                                <GridViewColumn
                                    Width="80"
                                    DisplayMemberBinding="{Binding Quantity}"
                                    Header="Quantity" />
                                <GridViewColumn
                                    Width="80"
                                    DisplayMemberBinding="{Binding MinQuantity}"
                                    Header="MinQnt" />
                                <GridViewColumn
                                    Width="100"
                                    DisplayMemberBinding="{Binding Price}"
                                    Header="Price" />
                                <GridViewColumn
                                    Width="100"
                                    DisplayMemberBinding="{Binding Supplier}"
                                    Header="Supplier" />
                                <GridViewColumn
                                    Width="100"
                                    DisplayMemberBinding="{Binding Description}"
                                    Header="Description" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>
            </Border>
        </Grid>

        <!--  Container for the add or update  -->
        <Border
            x:Name="Info_Container"
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="1"
            MaxWidth="700"
            MaxHeight="600"
            Margin="20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="#E8E8E8"
            BorderBrush="Black"
            BorderThickness="2"
            CornerRadius="20"
            Visibility="Collapsed">

            <!--  Grid to Hold Everything  -->
            <Grid>
                <Grid.RowDefinitions>
                    <!--  Title  -->
                    <RowDefinition Height="Auto" />
                    <!--  Scrollable Form  -->
                    <RowDefinition Height="*" />
                    <!--  Submit and Back Buttons  -->
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Title  -->
                <TextBlock
                    Grid.Row="0"
                    Margin="0,10"
                    HorizontalAlignment="Center"
                    FontFamily="Times New Roman"
                    FontSize="24"
                    FontWeight="Bold"
                    Text="Product Information" />

                <!--  Scrollable Form Container  -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--  Product Name  -->
                        <StackPanel
                            Grid.Row="0"
                            Grid.ColumnSpan="2"
                            Margin="10">
                            <TextBlock
                                Margin="0,0,0,5"
                                FontSize="14"
                                FontWeight="Bold"
                                Text="Product Name" />
                            <Border
                                Padding="5"
                                BorderBrush="Violet"
                                BorderThickness="0,0,0,2">
                                <Grid>
                                    <TextBlock
                                        Margin="5,0,0,0"
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        Foreground="Gray"
                                        IsHitTestVisible="False"
                                        Text="Product Name"
                                        Visibility="{Binding Text, ElementName=ProductNameTextBox, Converter={StaticResource EmptyTextToVisibilityConverter}}" />
                                    <TextBox
                                        x:Name="ProductNameTextBox"
                                        Padding="5,0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontSize="14"
                                        Foreground="Black"
                                        Text="{Binding EditableProduct.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!--  Category  -->
                        <StackPanel
                            Grid.Row="1"
                            Grid.ColumnSpan="2"
                            Margin="10">
                            <TextBlock
                                Margin="0,0,0,5"
                                FontSize="14"
                                FontWeight="Bold"
                                Text="Category" />
                            <ComboBox
                                Height="35"
                                BorderBrush="Violet"
                                BorderThickness="1"
                                DisplayMemberPath="CategoryName"
                                FontSize="14"
                                ItemsSource="{Binding Categories}"
                                SelectedValue="{Binding EditableProduct.CategoryId, Mode=TwoWay}"
                                SelectedValuePath="CatID" />
                        </StackPanel>

                        <!--  Quantity  -->
                        <StackPanel
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="10">
                            <TextBlock
                                Margin="0,0,0,5"
                                FontSize="14"
                                FontWeight="Bold"
                                Text="Quantity" />
                            <Border
                                Padding="5"
                                BorderBrush="Violet"
                                BorderThickness="0,0,0,2">
                                <Grid>
                                    <TextBlock
                                        Margin="5,0,0,0"
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        Foreground="Gray"
                                        IsHitTestVisible="False"
                                        Text="Quantity"
                                        Visibility="{Binding Text, ElementName=QuantityTextBox, Converter={StaticResource EmptyTextToVisibilityConverter}}" />
                                    <TextBox
                                        x:Name="QuantityTextBox"
                                        Padding="5,0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontSize="14"
                                        Foreground="Black"
                                        Text="{Binding EditableProduct.Quantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!--  Price  -->
                        <StackPanel
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="10">
                            <TextBlock
                                Margin="0,0,0,5"
                                FontSize="14"
                                FontWeight="Bold"
                                Text="Price" />
                            <Border
                                Padding="5"
                                BorderBrush="Violet"
                                BorderThickness="0,0,0,2">
                                <Grid>
                                    <TextBlock
                                        Margin="5,0,0,0"
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        Foreground="Gray"
                                        IsHitTestVisible="False"
                                        Text="Price"
                                        Visibility="{Binding Text, ElementName=PriceTextBox, Converter={StaticResource EmptyTextToVisibilityConverter}}" />
                                    <TextBox
                                        x:Name="PriceTextBox"
                                        Padding="5,0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontSize="14"
                                        Foreground="Black"
                                        Text="{Binding EditableProduct.Price, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!--  Min Quantity  -->
                        <StackPanel
                            Grid.Row="3"
                            Grid.Column="0"
                            Margin="10">
                            <TextBlock
                                Margin="0,0,0,5"
                                FontSize="14"
                                FontWeight="Bold"
                                Text="Min Quantity" />
                            <Border
                                Padding="5"
                                BorderBrush="Violet"
                                BorderThickness="0,0,0,2">
                                <Grid>
                                    <TextBlock
                                        Margin="5,0,0,0"
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        Foreground="Gray"
                                        IsHitTestVisible="False"
                                        Text="Min Quantity"
                                        Visibility="{Binding Text, ElementName=MinQntTextBox, Converter={StaticResource EmptyTextToVisibilityConverter}}" />
                                    <TextBox
                                        x:Name="MinQntTextBox"
                                        Padding="5,0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontSize="14"
                                        Foreground="Black"
                                        Text="{Binding EditableProduct.MinQuantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!--  Supplier  -->
                        <StackPanel
                            Grid.Row="3"
                            Grid.Column="1"
                            Margin="10">
                            <TextBlock
                                Margin="0,0,0,5"
                                FontSize="14"
                                FontWeight="Bold"
                                Text="Supplier" />
                            <Border
                                Padding="5"
                                BorderBrush="Violet"
                                BorderThickness="0,0,0,2">
                                <Grid>
                                    <TextBlock
                                        Margin="5,0,0,0"
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        Foreground="Gray"
                                        IsHitTestVisible="False"
                                        Text="Supplier"
                                        Visibility="{Binding Text, ElementName=SupplierTextBox, Converter={StaticResource EmptyTextToVisibilityConverter}}" />
                                    <TextBox
                                        x:Name="SupplierTextBox"
                                        Padding="5,0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontSize="14"
                                        Foreground="Black"
                                        Text="{Binding EditableProduct.Supplier, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!--  Description  -->
                        <StackPanel
                            Grid.Row="4"
                            Grid.ColumnSpan="2"
                            Margin="10">
                            <TextBlock
                                Margin="0,0,0,5"
                                FontSize="14"
                                FontWeight="Bold"
                                Text="Description" />
                            <Border
                                Padding="5"
                                BorderBrush="Violet"
                                BorderThickness="0,0,0,2">
                                <TextBox
                                    Height="Auto"
                                    Padding="5,0"
                                    AcceptsReturn="True"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    FontSize="14"
                                    Foreground="Black"
                                    Text="{Binding EditableProduct.Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    TextWrapping="Wrap" />
                            </Border>
                        </StackPanel>

                    </Grid>
                </ScrollViewer>

                <!--  Buttons (Outside ScrollViewer)  -->
                <StackPanel
                    Grid.Row="2"
                    Margin="10"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <Button
                        x:Name="Submit_Btn"
                        Width="150"
                        Height="40"
                        Command="{Binding AddProductCommand}"
                        Content="Submit"
                        FontFamily="Times New Roman"
                        Style="{StaticResource NewOrEditButtonStyle}"
                        Visibility="{Binding IsNewMode, Converter={StaticResource BoolToVisibilityConverter}}" />

                    <Button
                        x:Name="Update_Btn"
                        Width="150"
                        Height="40"
                        Margin="10,0,0,0"
                        Command="{Binding UpdateProductCommand}"
                        Content="Update"
                        FontFamily="Times New Roman"
                        Style="{StaticResource NewOrEditButtonStyle}"
                        Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}}" />

                    <Button
                        Width="150"
                        Height="40"
                        Margin="10,0,0,0"
                        Command="{Binding BackCommand}"
                        Content="Back"
                        FontFamily="Times New Roman"
                        Style="{StaticResource BackButtonStyle}" />
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</Page>
