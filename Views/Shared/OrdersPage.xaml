<Page
    x:Class="Inv_M_Sys.Views.Shared.OrdersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression.blend/2008"
    xmlns:local="clr-namespace:Inv_M_Sys.Views.Shared"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:other="clr-namespace:Inv_M_Sys.Converter"
    Title="OrdersPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Page.Resources>
        <!--  Rounded Button Style  -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Background" Value="#5F84FF" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Padding" Value="10,5" />
        </Style>

        <!--  Styled ComboBox (Category Dropdown)  -->
        <Style x:Key="CustomComboBoxStyle" TargetType="ComboBox">
            <Setter Property="BorderBrush" Value="Violet" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Background" Value="White" />
        </Style>
        <!--  Category box style  -->
        <Style x:Key="CatComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border
                            Padding="5"
                            Background="White"
                            BorderBrush="Violet"
                            BorderThickness="2"
                            CornerRadius="10">
                            <Grid>
                                <ToggleButton
                                    x:Name="ToggleButton"
                                    HorizontalAlignment="Stretch"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    ClickMode="Press">
                                    <ContentPresenter
                                        Margin="10,0,10,0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Center"
                                        Content="{TemplateBinding SelectionBoxItem}" />
                                    <ToggleButton.Template>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Grid>
                                                <Border
                                                    Background="Transparent"
                                                    BorderBrush="Transparent"
                                                    BorderThickness="0"
                                                    CornerRadius="10" />
                                                <ContentPresenter />
                                                <Path
                                                    x:Name="Arrow"
                                                    Width="10"
                                                    Height="10"
                                                    Margin="10"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Center"
                                                    Data="M 0 0 L 4 4 L 8 0"
                                                    Fill="Violet" />
                                            </Grid>
                                        </ControlTemplate>
                                    </ToggleButton.Template>
                                </ToggleButton>

                                <Popup
                                    x:Name="Popup"
                                    AllowsTransparency="True"
                                    IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                    Placement="Bottom"
                                    StaysOpen="False">
                                    <Border
                                        Padding="5"
                                        Background="White"
                                        BorderBrush="Violet"
                                        BorderThickness="2"
                                        CornerRadius="10">
                                        <ScrollViewer MaxHeight="150">
                                            <ItemsPresenter />
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Placeholder Text Visibility Converter  -->
        <other:EmptyTextToVisibilityConverter x:Key="EmptyTextToVisibilityConverter" />
    </Page.Resources>

    <Grid Background="#E8E8E8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Top  -->
        <Grid
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Background="#57AEFF">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*" />
                <ColumnDefinition />
                <ColumnDefinition Width="0.6*" />
            </Grid.ColumnDefinitions>

            <!--  **Page Title**  -->
            <TextBlock
                Grid.Column="1"
                Margin="0,10,0,10"
                HorizontalAlignment="Center"
                FontFamily="Times New Roman"
                FontSize="24"
                FontWeight="Bold"
                Text="Create New Order" />

            <!--  Log Out Button  -->
            <Grid Grid.Column="2">
                <Button
                    Width="150"
                    Margin="0,-1,79,-1"
                    Background="#57AEFF"
                    BorderBrush="Transparent"
                    Content="Log Out"
                    FontFamily="Times New Roman"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="Red" />

                <Button
                    Width="20"
                    Margin="199,-1,10,-1"
                    Background="#57AEFF"
                    BorderBrush="Transparent"
                    Content="X"
                    FontFamily="Times New Roman"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="Red"
                    RenderTransformOrigin="-1.084,0.562" />

                <Button
                    Width="20"
                    Margin="155,-1,54,-1"
                    Background="#57AEFF"
                    BorderBrush="Transparent"
                    Content="⬜"
                    FontFamily="Times New Roman"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="Red"
                    RenderTransformOrigin="-1.084,0.562" />
            </Grid>

            <!--  Note And Home Buttons  -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <!--  Notifications Button  -->
                <Button
                    Grid.Column="1"
                    Width="50"
                    Height="30"
                    Background="#57AEFF"
                    BorderBrush="Transparent">
                    <Canvas Width="20" Height="20">
                        <Path
                            Canvas.Top="-2"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            Data="M12 2a7 7 0 00-7 7v2a5 5 0 00-2 4v1h18v-1a5 5 0 00-2-4V9a7 7 0 00-7-7z M12 22c1.1 0 2-.9 2-2h-4c0 1.1.9 2 2 2z"
                            Fill="Yellow" />
                    </Canvas>
                </Button>

                <!--  Home Button  -->
                <Button
                    Grid.Column="0"
                    Width="50"
                    Height="30"
                    Background="#57AEFF"
                    BorderBrush="Transparent"
                    Content="Home"
                    FontFamily="Times New Roman"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="Red" />
            </Grid>
        </Grid>

        <!--  **Customer Selection**  -->
        <Grid Grid.Row="1" Grid.Column="0">
            <Border
                Margin="10"
                Padding="10"
                Background="White"
                BorderBrush="#CCCCCC"
                BorderThickness="1"
                CornerRadius="15">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,5"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Select Customer" />
                    <ListView
                        x:Name="CustomersListView"
                        Height="150"
                        Background="Transparent"
                        BorderThickness="0">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn
                                    Width="50"
                                    DisplayMemberBinding="{Binding CustomerID}"
                                    Header="ID" />
                                <GridViewColumn
                                    Width="200"
                                    DisplayMemberBinding="{Binding FullName}"
                                    Header="Name" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>
            </Border>
        </Grid>

        <!--  **Product Selection & Quantity Input**  -->
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border
                Grid.Row="0"
                Margin="10"
                Padding="10"
                Background="White"
                BorderBrush="#CCCCCC"
                BorderThickness="1"
                CornerRadius="15">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,5"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Select Product" />

                    <!--  Product Category Dropdown (Styled)  -->
                    <ComboBox
                        x:Name="CategoryComboBox"
                        Height="35"
                        SelectionChanged="OnCategorySelected"
                        Style="{StaticResource CatComboBoxStyle}">
                        <ComboBoxItem Content="All Categories" IsSelected="True" />
                    </ComboBox>


                    <!--  Product List  -->
                    <ListView
                        x:Name="ProductsListView"
                        Height="150"
                        Background="Transparent"
                        BorderThickness="0">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn
                                    Width="50"
                                    DisplayMemberBinding="{Binding ProductID}"
                                    Header="ID" />
                                <GridViewColumn
                                    Width="200"
                                    DisplayMemberBinding="{Binding ProductName}"
                                    Header="Name" />
                                <GridViewColumn
                                    Width="80"
                                    DisplayMemberBinding="{Binding Price}"
                                    Header="Price" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>
            </Border>

            <!--  **Quantity Field & Add Button**  -->
            <StackPanel
                Grid.Row="1"
                Margin="10"
                HorizontalAlignment="Center"
                Orientation="Horizontal">

                <!--  Quantity Input  -->
                <Border
                    Width="200"
                    Padding="5"
                    BorderBrush="Violet"
                    BorderThickness="0,0,0,2">
                    <Grid>
                        <TextBlock
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="14"
                            Foreground="Gray"
                            IsHitTestVisible="False"
                            Text="Quantity"
                            Visibility="{Binding Text, Converter={StaticResource EmptyTextToVisibilityConverter}, ElementName=QuantityTextBox}" />
                        <TextBox
                            x:Name="QuantityTextBox"
                            Width="180"
                            Padding="5,0"
                            HorizontalAlignment="Stretch"
                            Background="Transparent"
                            BorderThickness="0"
                            FontSize="14"
                            Foreground="Black" />
                    </Grid>
                </Border>

                <!--  Add Product Button  -->
                <Button
                    Width="150"
                    Height="35"
                    Margin="10"
                    Content="Add to Basket"
                    Style="{StaticResource RoundedButtonStyle}" />
            </StackPanel>
        </Grid>

        <!--  **Order Basket + Buttons**  -->
        <Grid
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*" />
                <ColumnDefinition Width="2.5*" />
            </Grid.ColumnDefinitions>

            <!--  **Left Side - Buttons & Delivery Date**  -->
            <StackPanel Grid.Column="0" Margin="10">
                <TextBlock
                    Margin="0,0,0,5"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="Select Delivery Date" />
                <DatePicker
                    x:Name="DeliveryDatePicker"
                    BorderBrush="Violet"
                    BorderThickness="1"
                    FontSize="14" />

                <!--  Buttons Stacked Vertically  -->
                <StackPanel Margin="10,10,0,0" HorizontalAlignment="Left">
                    <Button
                        Width="150"
                        Height="40"
                        Margin="10"
                        Background="Green"
                        Content="Place Order"
                        Foreground="White"
                        Style="{StaticResource RoundedButtonStyle}" />
                    <Button
                        Width="150"
                        Height="40"
                        Background="Red"
                        Content="Cancel"
                        Foreground="White"
                        Style="{StaticResource RoundedButtonStyle}" />
                </StackPanel>
            </StackPanel>

            <!--  **Order Basket (Longer List)**  -->
            <Border
                Grid.Column="1"
                Margin="10"
                Padding="10"
                Background="White"
                BorderBrush="#CCCCCC"
                BorderThickness="1"
                CornerRadius="15">
                <ListView
                    x:Name="OrderBasketListView"
                    Height="200"
                    HorizontalAlignment="Stretch"
                    Background="Transparent"
                    BorderThickness="0">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn
                                Width="200"
                                DisplayMemberBinding="{Binding ProductName}"
                                Header="Product" />
                            <GridViewColumn
                                Width="80"
                                DisplayMemberBinding="{Binding Quantity}"
                                Header="Quantity" />
                            <GridViewColumn
                                Width="80"
                                DisplayMemberBinding="{Binding Price}"
                                Header="Price" />
                            <GridViewColumn
                                Width="100"
                                DisplayMemberBinding="{Binding TotalPrice}"
                                Header="Total" />
                            <GridViewColumn Width="80" Header="Actions">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button
                                                Width="30"
                                                Height="30"
                                                Background="Red"
                                                BorderThickness="0"
                                                Click="RemoveItem_Click"
                                                Content="❌"
                                                FontSize="14"
                                                FontWeight="Bold"
                                                Foreground="White"
                                                ToolTip="Remove Item" />
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Border>
        </Grid>
    </Grid>
</Page>