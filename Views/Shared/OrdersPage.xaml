<Page
    x:Class="Inv_M_Sys.Views.Shared.OrdersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression.blend/2008"
    xmlns:local="clr-namespace:Inv_M_Sys.Views.Shared"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:other="clr-namespace:Inv_M_Sys.Converter"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    Title="OrdersPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Page.Resources>
        <!--  Rounded Button Style  -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Background" Value="#5F84FF" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Padding" Value="10,5" />

            <!--  Hover effect  -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4A72CC" />
                    <!--  Darker background on hover  -->
                    <Setter Property="BorderBrush" Value="#3F5FB5" />
                    <!--  Darker border on hover  -->
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--  Combobox style  -->
        <Style x:Key="CustomComboBoxStyle" TargetType="ComboBox">
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="MinWidth" Value="120" />
            <Setter Property="MinHeight" Value="35" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border
                                x:Name="Border"
                                Background="White"
                                BorderBrush="Violet"
                                BorderThickness="2"
                                CornerRadius="4">
                                <Grid>
                                    <ContentPresenter
                                        x:Name="ContentSite"
                                        Margin="10,0,30,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Content="{TemplateBinding SelectionBoxItem}"
                                        ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                        ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}" />

                                    <Path
                                        x:Name="Arrow"
                                        Margin="0,0,10,0"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Data="M 0 0 L 4 4 L 8 0 Z"
                                        Fill="Violet" />

                                    <!--  Transparent full-area button without hover  -->
                                    <ToggleButton
                                        x:Name="DropDownToggle"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Focusable="False"
                                        IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                                        <ToggleButton.Template>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <Border Background="Transparent">
                                                    <ContentPresenter />
                                                </Border>
                                            </ControlTemplate>
                                        </ToggleButton.Template>
                                    </ToggleButton>
                                </Grid>
                            </Border>

                            <Popup
                                x:Name="Popup"
                                AllowsTransparency="True"
                                Focusable="False"
                                IsOpen="{TemplateBinding IsDropDownOpen}"
                                Placement="Bottom"
                                PopupAnimation="Slide">
                                <Grid
                                    x:Name="DropDown"
                                    MinWidth="{TemplateBinding ActualWidth}"
                                    MaxHeight="200"
                                    SnapsToDevicePixels="True">
                                    <Border
                                        x:Name="DropDownBorder"
                                        Background="White"
                                        BorderBrush="Violet"
                                        BorderThickness="2" />
                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>

                        <!--  Only Border hover effect  -->
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#FF9A00D8" />
                            </Trigger>

                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#FF9A00D8" />
                            </Trigger>

                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="#FFF0F0F0" />
                                <Setter TargetName="Border" Property="BorderBrush" Value="#FFD0D0D0" />
                                <Setter Property="Foreground" Value="#FF888888" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Placeholder Text Visibility Converter  -->
        <other:EmptyTextToVisibilityConverter x:Key="EmptyTextToVisibilityConverter" />
    </Page.Resources>

    <Grid Background="#E8E8E8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Top  -->
        <Grid
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Background="#57AEFF">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*" />
                <ColumnDefinition />
                <ColumnDefinition Width="0.6*" />
            </Grid.ColumnDefinitions>

            <!--  **Page Title**  -->
            <TextBlock
                Grid.Column="1"
                Margin="0,10,0,10"
                HorizontalAlignment="Center"
                FontFamily="Times New Roman"
                FontSize="24"
                FontWeight="Bold"
                Text="Create New Order" />

            <!--  Log Out Button  -->
            <Grid Grid.Column="2">
                <Button
                    Width="150"
                    Margin="0,-1,79,-1"
                    Background="#57AEFF"
                    BorderBrush="Transparent"
                    Click="Logout_Click"
                    Content="Log Out"
                    FontFamily="Times New Roman"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="Red" />

                <Button
                    Width="20"
                    Margin="199,-1,10,-1"
                    Background="#57AEFF"
                    BorderBrush="Transparent"
                    Click="Close_Click"
                    Content="X"
                    FontFamily="Times New Roman"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="Red"
                    RenderTransformOrigin="-1.084,0.562" />

                <Button
                    Width="20"
                    Margin="155,-1,54,-1"
                    Background="#57AEFF"
                    BorderBrush="Transparent"
                    Click="Minimize_Click"
                    Content="--"
                    FontFamily="Times New Roman"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="Red"
                    RenderTransformOrigin="-1.084,0.562" />
            </Grid>

            <!--  Home Buttons  -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <!--  Home Button  -->
                <Button
                    Grid.Column="0"
                    Width="50"
                    Height="30"
                    Background="#57AEFF"
                    BorderBrush="Transparent"
                    Click="Home_Click"
                    Content="Home"
                    FontFamily="Times New Roman"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="Red" />
            </Grid>
        </Grid>

        <!--  **Customer Selection**  -->
        <Grid Grid.Row="1" Grid.Column="0">
            <Border
                Margin="10"
                Padding="10"
                Background="White"
                BorderBrush="#CCCCCC"
                BorderThickness="1"
                CornerRadius="15">

                <!--  ✅ Use Grid to allow stretching  -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Margin="0,0,0,5"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Select Customer" />

                    <ListView
                        x:Name="CustomersListView"
                        Grid.Row="1"
                        Background="Transparent"
                        BorderThickness="0"
                        ScrollViewer.CanContentScroll="True"
                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                        SelectedItem="{Binding SelectedCustomer, Mode=TwoWay}"
                        SelectionChanged="CustomersListView_SelectionChanged">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn
                                    Width="auto"
                                    DisplayMemberBinding="{Binding Id}"
                                    Header="ID" />
                                <GridViewColumn
                                    Width="150"
                                    DisplayMemberBinding="{Binding FullName}"
                                    Header="Name" />
                                <GridViewColumn
                                    Width="150"
                                    DisplayMemberBinding="{Binding CompanyName}"
                                    Header="Company" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </Border>
        </Grid>

        <!--  **Product Selection & Quantity Input**  -->
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!--  Label  -->
                <RowDefinition Height="Auto" />
                <!--  ComboBox  -->
                <RowDefinition Height="*" />
                <!--  ListView here  -->
            </Grid.RowDefinitions>

            <!--  Product Selection (Stretches to Fill Available Space)  -->
            <Border
                Grid.Row="0"
                Margin="10"
                Padding="10"
                Background="White"
                BorderBrush="#CCCCCC"
                BorderThickness="1"
                CornerRadius="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <!--  Select Product Text  -->
                        <RowDefinition Height="*" />
                        <!--  Product List (Expands to fill space)  -->
                    </Grid.RowDefinitions>

                    <!--  Label For Category  -->
                    <Label
                        Grid.Row="0"
                        Content="Category"
                        FontFamily="Times New Roman"
                        FontSize="14"
                        FontStretch="Normal"
                        FontStyle="Normal"
                        FontWeight="Bold" />
                    <!--  Product Category Dropdown  -->
                    <ComboBox
                        x:Name="CategoryComboBox"
                        Grid.Row="1"
                        Height="35"
                        Margin="0,0,0,15"
                        SelectedIndex="0"
                        SelectionChanged="CategoryComboBox_SelectionChanged"
                        Style="{StaticResource CustomComboBoxStyle}" />


                    <!--  Product List  -->
                    <ListView
                        x:Name="ProductsListView"
                        Grid.Row="2"
                        Height="600"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Background="Transparent"
                        BorderThickness="0"
                        ScrollViewer.CanContentScroll="True"
                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                        SelectionChanged="ProductsListView_SelectionChanged">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn
                                    Width="auto"
                                    DisplayMemberBinding="{Binding Id}"
                                    Header="ID" />
                                <GridViewColumn
                                    Width="150"
                                    DisplayMemberBinding="{Binding Name}"
                                    Header="Name" />
                                <GridViewColumn
                                    Width="80"
                                    DisplayMemberBinding="{Binding Price}"
                                    Header="Price" />
                                <GridViewColumn
                                    Width="auto"
                                    DisplayMemberBinding="{Binding Quantity}"
                                    Header="Current In Stock" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </Border>

            <!--  Quantity Input + Add Button (Now Anchored to Bottom)  -->
            <StackPanel
                Grid.Row="1"
                Margin="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Orientation="Horizontal">

                <!--  Quantity Input  -->
                <Border
                    Width="200"
                    Margin="0,0,0,20"
                    Padding="5"
                    BorderBrush="Violet"
                    BorderThickness="0,0,0,2">
                    <Grid>
                        <TextBlock
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="14"
                            Foreground="Gray"
                            IsHitTestVisible="False"
                            Text="Quantity"
                            Visibility="{Binding Text, Converter={StaticResource EmptyTextToVisibilityConverter}, ElementName=QuantityTextBox}" />
                        <TextBox
                            x:Name="QuantityTextBox"
                            Width="180"
                            Padding="5,0"
                            HorizontalAlignment="Stretch"
                            Background="Transparent"
                            BorderThickness="0"
                            FontSize="14"
                            Foreground="Black"
                            Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}" />
                    </Grid>
                </Border>

                <!--  Add Product Button  -->
                <Button
                    Width="150"
                    Height="35"
                    Margin="10"
                    Command="{Binding AddToBasketCommand}"
                    CommandParameter="{Binding SelectedProduct}"
                    Content="Add to Basket"
                    Style="{StaticResource RoundedButtonStyle}" />
            </StackPanel>
        </Grid>

        <!--  **Order Basket + Buttons**  -->
        <Grid
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*" />
                <ColumnDefinition Width="2.5*" />
            </Grid.ColumnDefinitions>

            <!--  **Left Side - Buttons & Delivery Date**  -->
            <StackPanel Grid.Column="0" Margin="10">
                <TextBlock
                    Margin="0,0,0,5"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="Select Delivery Date" />
                <DatePicker
                    x:Name="DeliveryDatePicker"
                    BorderBrush="Violet"
                    BorderThickness="1"
                    DisplayDateStart="{x:Static sys:DateTime.Today}"
                    FontSize="14"
                    SelectedDate="{Binding DeliveryDate, Mode=TwoWay}" />

                <!--  Buttons Stacked Vertically  -->
                <StackPanel
                    Margin="10,100,0,0"
                    HorizontalAlignment="Left"
                    Orientation="Horizontal">
                    <Button
                        Width="150"
                        Height="40"
                        Margin="10"
                        Background="Green"
                        Click="PlaceOrderButton_Click"
                        Content="Place Order"
                        Foreground="White"
                        Style="{StaticResource RoundedButtonStyle}" />
                    <Button
                        Width="150"
                        Height="40"
                        Background="Orange"
                        Command="{Binding ClearBasketCommand}"
                        Content="Clear Basket"
                        Foreground="White"
                        Style="{StaticResource RoundedButtonStyle}" />
                </StackPanel>
            </StackPanel>

            <!--  **Order Basket (Longer List)**  -->
            <Border
                Grid.Column="1"
                Margin="10"
                Padding="10"
                Background="White"
                BorderBrush="#CCCCCC"
                BorderThickness="1"
                CornerRadius="15">
                <ListView
                    x:Name="OrderBasketListView"
                    Height="200"
                    HorizontalAlignment="Stretch"
                    Background="Transparent"
                    BorderThickness="0"
                    ItemsSource="{Binding OrderBasket}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn
                                Width="150"
                                DisplayMemberBinding="{Binding Product.Name}"
                                Header="Product" />
                            <GridViewColumn
                                Width="auto"
                                DisplayMemberBinding="{Binding Quantity}"
                                Header="Quantity" />
                            <GridViewColumn
                                Width="auto"
                                DisplayMemberBinding="{Binding Product.Price}"
                                Header="Price" />
                            <GridViewColumn
                                Width="auto"
                                DisplayMemberBinding="{Binding TotalPrice}"
                                Header="Total" />
                            <GridViewColumn Width="80" Header="Actions">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <!--  Button to remove item from basket  -->
                                            <Button
                                                Width="30"
                                                Height="30"
                                                Background="Red"
                                                BorderThickness="0"
                                                Command="{Binding DataContext.RemoveFromBasketCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                CommandParameter="{Binding}"
                                                Content="❌"
                                                FontSize="14"
                                                FontWeight="Bold"
                                                Foreground="White"
                                                ToolTip="Remove Item" />
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Border>
        </Grid>
    </Grid>
</Page>