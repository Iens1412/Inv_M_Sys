<Page
    x:Class="Inv_M_Sys.Views.Shared.CategoriesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Inv_M_Sys.Views.Shared"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:other="clr-namespace:Inv_M_Sys.Converter"
    Title="CategoriesPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Page.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Background" Value="Red" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Padding" Value="10,5" />

            <!--  Hover Effect  -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5F84FF" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="Cursor" Value="Hand" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SrchRefButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Background" Value="#02C125" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Padding" Value="10,5" />

            <!--  Hover Effect  -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5F84FF" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="Cursor" Value="Hand" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--  New OR Edit Buttons  -->
        <Style x:Key="NewOrEditButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Background" Value="#D88500" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Padding" Value="10,5" />

            <!--  Hover Effect  -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5F84FF" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="Cursor" Value="Hand" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <!--  Back Button  -->
        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Background" Value="Red" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Padding" Value="10,5" />

            <!--  Hover Effect  -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5F84FF" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="Cursor" Value="Hand" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <other:EmptyTextToVisibilityConverter x:Key="CategoryTextToVisibilityConverter" />
        <other:EmptyTextToVisibilityConverter x:Key="SearchTextToVisibilityConverter" />

    </Page.Resources>

    <Grid Background="#E8E8E8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.07*" />
            <RowDefinition Height="0.14*" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--  Top  -->
        <Grid
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Background="#57AEFF">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*" />
                <ColumnDefinition />
                <ColumnDefinition Width="0.6*" />
            </Grid.ColumnDefinitions>

            <!--  Log Out Button  -->
            <Grid Grid.Column="2">
                <Button
                    Width="150"
                    Margin="0,-1,79,-1"
                    Background="#57AEFF"
                    BorderBrush="Transparent"
                    Click="Logout_Click"
                    Content="Log Out"
                    FontFamily="Times New Roman"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="Red" />

                <Button
                    Width="20"
                    Margin="199,-1,10,-1"
                    Background="#57AEFF"
                    BorderBrush="Transparent"
                    Click="Close_Click"
                    Content="X"
                    FontFamily="Times New Roman"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="Red"
                    RenderTransformOrigin="-1.084,0.562" />

                <Button
                    Width="20"
                    Margin="155,-1,54,-1"
                    Background="#57AEFF"
                    BorderBrush="Transparent"
                    Click="Minimize_Click"
                    Content="_"
                    FontFamily="Times New Roman"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="Red"
                    RenderTransformOrigin="-1.084,0.562" />
            </Grid>

            <!--  Home Buttons  -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <!--  Home Button  -->
                <Button
                    Grid.Column="0"
                    Width="50"
                    Height="30"
                    Background="#57AEFF"
                    BorderBrush="Transparent"
                    Click="Home_Click"
                    Content="Home"
                    FontFamily="Times New Roman"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="Red" />
            </Grid>
        </Grid>

        <!--  Buttons  -->
        <Grid Grid.Row="2" Grid.Column="0">
            <StackPanel
                Width="Auto"
                Height="auto"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <Button
                    x:Name="NewBtn"
                    Width="180"
                    Height="32"
                    Click="New_Click"
                    Content="New"
                    FontFamily="Times New Roman"
                    Style="{StaticResource RoundedButtonStyle}" />
                <Button
                    x:Name="UpdateBtn"
                    Width="180"
                    Height="32"
                    Margin="0,20,0,0"
                    Click="Update_Click"
                    Content="Update"
                    FontFamily="Times New Roman"
                    Style="{StaticResource RoundedButtonStyle}" />
                <Button
                    x:Name="DeleteBtn"
                    Width="180"
                    Height="32"
                    Margin="0,20,0,0"
                    Click="Delete_Click"
                    Content="Delete"
                    FontFamily="Times New Roman"
                    Style="{StaticResource RoundedButtonStyle}" />
                <!--  Add spacer  -->
                <Border Height="180" Padding="4" />
            </StackPanel>
        </Grid>

        <!--  Search and Refresh  -->
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15*" />
                <ColumnDefinition Width="26*" />
                <ColumnDefinition Width="19*" />
                <ColumnDefinition Width="15*" />
            </Grid.ColumnDefinitions>

            <!--  search bar  -->
            <Grid Grid.Column="1">
                <Border
                    Width="200"
                    Height="30"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="White"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    CornerRadius="15">
                    <Grid>
                        <!--  Placeholder Text  -->
                        <TextBlock
                            x:Name="SearchPlaceholderText"
                            Margin="10,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Foreground="Gray"
                            IsHitTestVisible="False"
                            Text="Enter text here..."
                            Visibility="{Binding Text, ElementName=RoundedTextBox, Converter={StaticResource SearchTextToVisibilityConverter}}" />
                        <!--  TextBox  -->
                        <TextBox
                            x:Name="RoundedTextBox"
                            Padding="10,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="Black"
                            TextChanged="RoundedTextBox_TextChanged" />
                    </Grid>
                </Border>
            </Grid>

            <!--  Buttons for search and Refresh  -->
            <Grid Grid.Column="2" Grid.ColumnSpan="2">
                <Button
                    Width="120"
                    Height="30"
                    HorizontalAlignment="Left"
                    Click="Search_Click"
                    Content="Search"
                    FontFamily="Times new roman"
                    Style="{StaticResource SrchRefButtonStyle}" />
                <Button
                    Width="120"
                    Height="30"
                    Margin="136,11,0,11"
                    HorizontalAlignment="Left"
                    Click="Refresh_Click"
                    Content="Refresh"
                    FontFamily="Times new roman"
                    Style="{StaticResource SrchRefButtonStyle}" />
            </Grid>

        </Grid>

        <!--  List for the info  -->
        <Grid Grid.Row="2" Grid.Column="1">
            <!--  Outer Container  -->
            <Border
                Margin="10"
                Padding="10"
                Background="#FFFFFF"
                BorderBrush="#CCCCCC"
                BorderThickness="1"
                CornerRadius="15">

                <StackPanel>
                    <!--  Categorys ListView  -->
                    <ListView
                        x:Name="CategorysListView"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        AlternationCount="2"
                        Background="Transparent"
                        BorderThickness="0"
                        SelectionChanged="CategorysListView_SelectionChanged"
                        Visibility="Visible">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn
                                    Width="100"
                                    DisplayMemberBinding="{Binding CatID}"
                                    Header="ID" />
                                <GridViewColumn
                                    Width="400"
                                    DisplayMemberBinding="{Binding CategoryName}"
                                    Header="Name" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>
            </Border>
        </Grid>

        <StackPanel
            Grid.Row="1"
            Grid.Column="0"
            Margin="10"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center">
            <Border
                Padding="5"
                BorderBrush="Violet"
                BorderThickness="0,0,0,2">

                <Grid>
                    <TextBlock
                        x:Name="CategoryPlaceholderText"
                        Margin="5,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Foreground="Gray"
                        IsHitTestVisible="False"
                        Text="Category Name"
                        TextAlignment="Center"
                        Visibility="{Binding Text, ElementName=CategoryTextBox, Converter={StaticResource CategoryTextToVisibilityConverter}}" />
                    <TextBox
                        x:Name="CategoryTextBox"
                        Padding="5,0"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="14"
                        Foreground="Black"
                        TextChanged="CategoryTextBox_TextChanged" />
                </Grid>
            </Border>
        </StackPanel>
    </Grid>
</Page>
