<Page
    x:Class="Inv_M_Sys.Views.Shared.CustomersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Inv_M_Sys.Views.Shared"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:other="clr-namespace:Inv_M_Sys.Converter"
    Title="CustomersPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Page.Resources>
        <!--  Normal Buttons  -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Background" Value="Red" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Padding" Value="10,5" />

            <!--  Hover Effect  -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5F84FF" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="Cursor" Value="Hand" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <!--  Search Button  -->
        <Style x:Key="SrchRefButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Background" Value="#02C125" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Padding" Value="10,5" />

            <!--  Hover Effect  -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5F84FF" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="Cursor" Value="Hand" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <!--  New OR Edit Buttons  -->
        <Style x:Key="NewOrEditButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Background" Value="#D88500" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Padding" Value="10,5" />

            <!--  Hover Effect  -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5F84FF" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="Cursor" Value="Hand" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <!--  Back Button  -->
        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Background" Value="Red" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Padding" Value="10,5" />

            <!--  Hover Effect  -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5F84FF" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="Cursor" Value="Hand" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <!--  Placeholder Text Visibility Converter  -->
        <other:EmptyTextToVisibilityConverter x:Key="EmptyTextToVisibilityConverter" />
    </Page.Resources>

    <Grid Background="#E8E8E8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.07*" />
            <RowDefinition Height="0.14*" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--  Top  -->
        <Grid
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Background="#57AEFF">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*" />
                <ColumnDefinition />
                <ColumnDefinition Width="0.6*" />
            </Grid.ColumnDefinitions>

            <!--  Log Out Button  -->
            <Grid Grid.Column="2">
                <Button
                    Width="150"
                    Margin="0,-1,79,-1"
                    Background="#57AEFF"
                    BorderBrush="Transparent"
                    Content="Log Out"
                    FontFamily="Times New Roman"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="Red" />

                <Button
                    Width="20"
                    Margin="199,-1,10,-1"
                    Background="#57AEFF"
                    BorderBrush="Transparent"
                    Content="X"
                    FontFamily="Times New Roman"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="Red"
                    RenderTransformOrigin="-1.084,0.562" />

                <Button
                    Width="20"
                    Margin="155,-1,54,-1"
                    Background="#57AEFF"
                    BorderBrush="Transparent"
                    Content="⬜"
                    FontFamily="Times New Roman"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="Red"
                    RenderTransformOrigin="-1.084,0.562" />
            </Grid>

            <!--  Note And Home Buttons  -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <!--  Notifications Button  -->
                <Button
                    Grid.Column="1"
                    Width="50"
                    Height="30"
                    Background="#57AEFF"
                    BorderBrush="Transparent">
                    <Canvas Width="20" Height="20">
                        <Path
                            Canvas.Top="-2"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            Data="M12 2a7 7 0 00-7 7v2a5 5 0 00-2 4v1h18v-1a5 5 0 00-2-4V9a7 7 0 00-7-7z M12 22c1.1 0 2-.9 2-2h-4c0 1.1.9 2 2 2z"
                            Fill="Yellow" />
                    </Canvas>
                </Button>

                <!--  Home Button  -->
                <Button
                    Grid.Column="0"
                    Width="50"
                    Height="30"
                    Background="#57AEFF"
                    BorderBrush="Transparent"
                    Content="Home"
                    FontFamily="Times New Roman"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="Red" />
            </Grid>
        </Grid>

        <!--  **Sidebar Buttons**  -->
        <Grid Grid.Row="2" Grid.Column="0">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button
                    Width="180"
                    Content="New Customer"
                    Style="{StaticResource RoundedButtonStyle}" />
                <Button
                    Width="180"
                    Margin="0,10,0,0"
                    Content="Edit Customer"
                    Style="{StaticResource RoundedButtonStyle}" />
                <Button
                    Width="180"
                    Margin="0,10,0,0"
                    Content="Delete Customer"
                    Style="{StaticResource RoundedButtonStyle}" />
            </StackPanel>
        </Grid>

        <!--  **Search Bar & Refresh**  -->
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <!--  Search Box  -->
            <Border
                Width="250"
                Height="30"
                Background="White"
                BorderBrush="Gray"
                BorderThickness="1"
                CornerRadius="15">
                <Grid>
                    <!--  Placeholder  -->
                    <TextBlock
                        x:Name="PlaceholderText"
                        Margin="10,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Foreground="Gray"
                        IsHitTestVisible="False"
                        Text="Search customers..."
                        Visibility="{Binding Text, ElementName=SearchTextBox, Converter={StaticResource EmptyTextToVisibilityConverter}}" />
                    <!--  TextBox  -->
                    <TextBox
                        x:Name="SearchTextBox"
                        Padding="10,0"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="Black" />
                </Grid>
            </Border>

            <!--  Refresh Button  -->
            <Button
                Grid.Column="1"
                Width="120"
                Height="30"
                Margin="10,0,0,0"
                Content="Refresh"
                Style="{StaticResource SrchRefButtonStyle}" />
        </Grid>

        <!--  **Customers List**  -->
        <Grid Grid.Row="2" Grid.Column="1">
            <Border
                Margin="10"
                Padding="10"
                Background="White"
                BorderBrush="#CCCCCC"
                BorderThickness="1"
                CornerRadius="15">
                <ListView
                    x:Name="CustomersListView"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    AlternationCount="2"
                    Background="Transparent"
                    BorderThickness="0">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn
                                Width="50"
                                DisplayMemberBinding="{Binding CustomerID}"
                                Header="ID" />
                            <GridViewColumn
                                Width="150"
                                DisplayMemberBinding="{Binding FirstName}"
                                Header="First Name" />
                            <GridViewColumn
                                Width="150"
                                DisplayMemberBinding="{Binding LastName}"
                                Header="Last Name" />
                            <GridViewColumn
                                Width="150"
                                DisplayMemberBinding="{Binding LastName}"
                                Header="Company Name" />
                            <GridViewColumn
                                Width="200"
                                DisplayMemberBinding="{Binding Email}"
                                Header="Email" />
                            <GridViewColumn
                                Width="150"
                                DisplayMemberBinding="{Binding Phone}"
                                Header="Phone" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </Border>
        </Grid>

        <!--  Container to Add or Update Customer  -->
        <Border
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="1"
            Margin="20"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="#E8E8E8"
            BorderBrush="Black"
            BorderThickness="2"
            CornerRadius="40"
            Visibility="Collapsed">

            <!--  Grid to Hold Everything  -->
            <Grid>
                <Grid.RowDefinitions>
                    <!--  Title  -->
                    <RowDefinition Height="Auto" />
                    <!--  Scrollable Form  -->
                    <RowDefinition Height="*" />
                    <!--  Submit Button  -->
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Title  -->
                <TextBlock
                    Grid.Row="0"
                    Margin="0,10"
                    HorizontalAlignment="Center"
                    FontFamily="Times New Roman"
                    FontSize="24"
                    FontWeight="Bold"
                    Text="Customer Information" />

                <!--  Scrollable Content  -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--  Company Name  -->
                        <StackPanel
                            Grid.Row="0"
                            Grid.ColumnSpan="2"
                            Margin="10">
                            <Border
                                Padding="5"
                                BorderBrush="Violet"
                                BorderThickness="0,0,0,2">
                                <Grid>
                                    <TextBlock
                                        Margin="5,0,0,0"
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        Foreground="Gray"
                                        IsHitTestVisible="False"
                                        Text="Company Name"
                                        Visibility="{Binding Text, ElementName=CompanyTextBox, Converter={StaticResource EmptyTextToVisibilityConverter}}" />
                                    <TextBox
                                        x:Name="CompanyTextBox"
                                        Padding="5,0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontSize="14"
                                        Foreground="Black" />
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!--  First Name  -->
                        <StackPanel
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="10">
                            <Border
                                Padding="5"
                                BorderBrush="Violet"
                                BorderThickness="0,0,0,2">
                                <Grid>
                                    <TextBlock
                                        Margin="5,0,0,0"
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        Foreground="Gray"
                                        IsHitTestVisible="False"
                                        Text="First Name"
                                        Visibility="{Binding Text, ElementName=FirstNameTextBox, Converter={StaticResource EmptyTextToVisibilityConverter}}" />
                                    <TextBox
                                        x:Name="FirstNameTextBox"
                                        Padding="5,0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontSize="14"
                                        Foreground="Black" />
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!--  Last Name  -->
                        <StackPanel
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="10">
                            <Border
                                Padding="5"
                                BorderBrush="Violet"
                                BorderThickness="0,0,0,2">
                                <Grid>
                                    <TextBlock
                                        Margin="5,0,0,0"
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        Foreground="Gray"
                                        IsHitTestVisible="False"
                                        Text="Last Name"
                                        Visibility="{Binding Text, ElementName=LastNameTextBox, Converter={StaticResource EmptyTextToVisibilityConverter}}" />
                                    <TextBox
                                        x:Name="LastNameTextBox"
                                        Padding="5,0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontSize="14"
                                        Foreground="Black" />
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!--  Email  -->
                        <StackPanel
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="10">
                            <Border
                                Padding="5"
                                BorderBrush="Violet"
                                BorderThickness="0,0,0,2">
                                <Grid>
                                    <TextBlock
                                        Margin="5,0,0,0"
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        Foreground="Gray"
                                        IsHitTestVisible="False"
                                        Text="Email"
                                        Visibility="{Binding Text, ElementName=EmailTextBox, Converter={StaticResource EmptyTextToVisibilityConverter}}" />
                                    <TextBox
                                        x:Name="EmailTextBox"
                                        Padding="5,0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontSize="14"
                                        Foreground="Black" />
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!--  Phone Number  -->
                        <StackPanel
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="10">
                            <Border
                                Padding="5"
                                BorderBrush="Violet"
                                BorderThickness="0,0,0,2">
                                <Grid>
                                    <TextBlock
                                        Margin="5,0,0,0"
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        Foreground="Gray"
                                        IsHitTestVisible="False"
                                        Text="Phone Number"
                                        Visibility="{Binding Text, ElementName=PhoneTextBox, Converter={StaticResource EmptyTextToVisibilityConverter}}" />
                                    <TextBox
                                        x:Name="PhoneTextBox"
                                        Padding="5,0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontSize="14"
                                        Foreground="Black" />
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!--  Address  -->
                        <StackPanel
                            Grid.Row="3"
                            Grid.ColumnSpan="2"
                            Margin="10">
                            <Border
                                Padding="5"
                                BorderBrush="Violet"
                                BorderThickness="0,0,0,2">
                                <Grid>
                                    <TextBlock
                                        Margin="5,0,0,0"
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        Foreground="Gray"
                                        IsHitTestVisible="False"
                                        Text="Address"
                                        Visibility="{Binding Text, ElementName=AddressTextBox, Converter={StaticResource EmptyTextToVisibilityConverter}}" />
                                    <TextBox
                                        x:Name="AddressTextBox"
                                        Padding="5,0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontSize="14"
                                        Foreground="Black" />
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!--  Notes  -->
                        <StackPanel
                            Grid.Row="4"
                            Grid.ColumnSpan="2"
                            Margin="10">
                            <Border
                                Padding="5"
                                BorderBrush="Violet"
                                BorderThickness="0,0,0,2">
                                <Grid>
                                    <TextBlock
                                        Margin="5,0,0,0"
                                        VerticalAlignment="Top"
                                        FontSize="14"
                                        Foreground="Gray"
                                        IsHitTestVisible="False"
                                        Text="Notes"
                                        Visibility="{Binding Text, ElementName=NotesTextBox, Converter={StaticResource EmptyTextToVisibilityConverter}}" />
                                    <TextBox
                                        x:Name="NotesTextBox"
                                        Height="60"
                                        Padding="5,0"
                                        AcceptsReturn="True"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontSize="14"
                                        Foreground="Black"
                                        TextWrapping="Wrap" />
                                </Grid>
                            </Border>
                        </StackPanel>

                    </Grid>
                </ScrollViewer>

                <!--  Buttons (Outside ScrollViewer)  -->
                <Button
                    Grid.Row="2"
                    Width="150"
                    Height="40"
                    Margin="80,20,0,20"
                    HorizontalAlignment="Left"
                    Content="Submit"
                    FontFamily="Times New Roman"
                    Style="{StaticResource NewOrEditButtonStyle}"
                    Visibility="Visible" />

                <Button
                    Grid.Row="2"
                    Width="150"
                    Height="40"
                    Margin="80,20,0,20"
                    HorizontalAlignment="Left"
                    Content="Update"
                    FontFamily="Times New Roman"
                    Style="{StaticResource NewOrEditButtonStyle}"
                    Visibility="Collapsed" />

                <Button
                    Grid.Row="2"
                    Width="150"
                    Height="40"
                    Margin="0,20,80,20"
                    HorizontalAlignment="Right"
                    Content="Back"
                    FontFamily="Times New Roman"
                    Style="{StaticResource BackButtonStyle}" />
            </Grid>
        </Border>
    </Grid>
</Page>
