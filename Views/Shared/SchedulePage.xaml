<Page x:Class="Inv_M_Sys.Views.Shared.SchedulePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:other="clr-namespace:Inv_M_Sys.Converter"
      mc:Ignorable="d"
      Title="SchedulePage">

    <Page.Resources>
        <other:EmptyTextToVisibilityConverter x:Key="EmptyTextToVisibilityConverter" />
    </Page.Resources>

    <Grid Background="#E8E8E8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*" />
            <RowDefinition Height="0.1*" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!-- Top Title -->
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                   HorizontalAlignment="Center"
                   FontSize="24"
                   FontWeight="Bold"
                   Text="Employee Schedule"
                   Margin="10"/>

        <!-- Search and Refresh -->
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <Grid Margin="10" VerticalAlignment="Center">
                <TextBlock Text="Search by Employee"
                           Foreground="Gray"
                           Margin="10,0,0,0"
                           VerticalAlignment="Center"
                           IsHitTestVisible="False"
                           Visibility="{Binding Text, ElementName=SearchTextBox, Converter={StaticResource EmptyTextToVisibilityConverter}}" />
                <TextBox x:Name="SearchTextBox"
                         Padding="10,0"
                         Background="White"
                         BorderThickness="1"
                         BorderBrush="Gray"
                         FontSize="14" />
            </Grid>

            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <Button Content="Search" Width="100" Margin="5" Click="Search_Click"/>
                <Button Content="Refresh" Width="100" Margin="5" Click="Refresh_Click"/>
            </StackPanel>
        </Grid>

        <!-- Schedule List -->
        <ListView x:Name="ScheduleListView"
                  Grid.Row="2"
                  Grid.Column="1"
                  Margin="10"
                  SelectionChanged="ScheduleListView_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Employee" DisplayMemberBinding="{Binding EmployeeName}" Width="150"/>
                    <GridViewColumn Header="Start Time" DisplayMemberBinding="{Binding StartTime}" Width="100"/>
                    <GridViewColumn Header="End Time" DisplayMemberBinding="{Binding EndTime}" Width="100"/>
                    <GridViewColumn Header="Total Hours" DisplayMemberBinding="{Binding TotalHours}" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Side Buttons -->
        <StackPanel Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Add Schedule" Width="150" Margin="5" Click="New_Click"/>
            <Button Content="Edit" Width="150" Margin="5" Click="Edit_Click"/>
            <Button Content="Delete" Width="150" Margin="5" Click="Delete_Click"/>
        </StackPanel>

        <!-- Form Container -->
        <Border x:Name="ScheduleFormContainer"
                Grid.Row="1"
                Grid.RowSpan="2"
                Grid.Column="1"
                Margin="20"
                Background="#E8E8E8"
                BorderBrush="Black"
                BorderThickness="2"
                CornerRadius="20"
                Visibility="Visible">

            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Schedule Information" HorizontalAlignment="Center" FontSize="18" FontWeight="Bold" Margin="10"/>

                <StackPanel Grid.Row="1" Margin="10">
                    <!-- Employee Name -->
                    <Grid Margin="5">
                        <TextBlock Text="Employee Name"
                                   Foreground="Gray"
                                   Margin="5,0,0,0"
                                   VerticalAlignment="Center"
                                   IsHitTestVisible="False"
                                   Visibility="{Binding Text, ElementName=EmployeeNameTextBox, Converter={StaticResource EmptyTextToVisibilityConverter}}" />
                        <TextBox x:Name="EmployeeNameTextBox"
                                 Padding="5,0"
                                 Background="Transparent"
                                 BorderThickness="0,0,0,1"
                                 FontSize="14"
                                 Foreground="Black"/>
                    </Grid>

                    <!-- Start Time -->
                    <Grid Margin="5">
                        <TextBlock Text="Start Time (HH:mm)"
                                   Foreground="Gray"
                                   Margin="5,0,0,0"
                                   VerticalAlignment="Center"
                                   IsHitTestVisible="False"
                                   Visibility="{Binding Text, ElementName=StartTimeTextBox, Converter={StaticResource EmptyTextToVisibilityConverter}}" />
                        <TextBox x:Name="StartTimeTextBox"
                                 Padding="5,0"
                                 Background="Transparent"
                                 BorderThickness="0,0,0,1"
                                 FontSize="14"
                                 Foreground="Black"/>
                    </Grid>

                    <!-- End Time -->
                    <Grid Margin="5">
                        <TextBlock Text="End Time (HH:mm)"
                                   Foreground="Gray"
                                   Margin="5,0,0,0"
                                   VerticalAlignment="Center"
                                   IsHitTestVisible="False"
                                   Visibility="{Binding Text, ElementName=EndTimeTextBox, Converter={StaticResource EmptyTextToVisibilityConverter}}" />
                        <TextBox x:Name="EndTimeTextBox"
                                 Padding="5,0"
                                 Background="Transparent"
                                 BorderThickness="0,0,0,1"
                                 FontSize="14"
                                 Foreground="Black"/>
                    </Grid>

                    <!-- Total Hours -->
                    <Grid Margin="5">
                        <TextBlock Text="Total Hours"
                                   Foreground="Gray"
                                   Margin="5,0,0,0"
                                   VerticalAlignment="Center"
                                   IsHitTestVisible="False"
                                   Visibility="{Binding Text, ElementName=TotalHoursTextBox, Converter={StaticResource EmptyTextToVisibilityConverter}}" />
                        <TextBox x:Name="TotalHoursTextBox"
                                 Padding="5,0"
                                 Background="Transparent"
                                 BorderThickness="0,0,0,1"
                                 FontSize="14"
                                 Foreground="Black"
                                 IsReadOnly="True"/>
                    </Grid>
                </StackPanel>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="SubmitBtn" Content="Submit" Width="120" Margin="5" Click="Submit_Click"/>
                    <Button x:Name="UpdateBtn" Content="Update" Width="120" Margin="5" Click="Update_Click" Visibility="Collapsed"/>
                    <Button Content="Back" Width="120" Margin="5" Click="Back_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
