<Page x:Class="Inv_M_Sys.Views.Main.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Login Page">

    <Page.Resources>
        <Style TargetType="Button" x:Key="RoundedButtonStyle">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="25" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Blue"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,5"/>

            <!-- Hover Effect -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5F84FF"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button" x:Key="ExitButtonStyle">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="Red"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="Transparent"/>

            <!-- Hover Effect -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button" x:Key="ClearButtonStyle">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10" 
                                BorderBrush="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>

            <!-- Hover Effect -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#000000"/>
                    <Setter Property="BorderBrush" Value="#5F84FF"/>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PersonLogoStyle" TargetType="Control">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Control">
                        <Grid Width="100" Height="100" Margin="0,0,0,12">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40*"/>
                                <RowDefinition Height="55*"/>
                            </Grid.RowDefinitions>

                            <!-- Circle for the Head -->
                            <Ellipse Width="40" Height="40" 
                             Fill="White" 
                             Stroke="White" 
                             StrokeThickness="2" Margin="30,-3,30,5" />
                            <!-- Adjusted Margin -->

                            <!-- Rounded Rectangle for the Body -->
                            <Path Data="M 20,70 
                                        Q 50,50 80,70 
                                        L 80,110 
                                        L 20,110 
                                        Z"  
                          Fill="White" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Center" Height="58" Stretch="Fill" Width="100" Grid.Row="1" />
                            <!-- Adjusted Margin -->
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CustomCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <!-- Custom Checkbox -->
                            <Border Width="16" Height="16"
                                    BorderBrush="White" BorderThickness="2"
                                    Background="Transparent"
                                    CornerRadius="2">
                                <Path x:Name="CheckMark"
                                      Data="M2,6 L6,10 L14,2"
                                      Stroke="White"
                                      StrokeThickness="2"
                                      StrokeEndLineCap="Round"
                                      Visibility="Collapsed" />
                            </Border>

                            <!-- Content -->
                            <TextBlock Text="{TemplateBinding Content}"
                                       Foreground="{TemplateBinding Foreground}"
                                       FontSize="{TemplateBinding FontSize}"
                                       Margin="5,0,0,0"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <!-- Checked State -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Page.Resources>

    <Page.Background>
        <ImageBrush ImageSource="../../Resources/Images/scott-graham-5fNmWej4tAA-unsplash.jpg" Stretch="UniformToFill"/>
    </Page.Background>

    <Grid>
        <!-- Centered Form Container -->
        <Border Background="#5F84FF" CornerRadius="15" Width="400" Height="450" 
                HorizontalAlignment="Center" VerticalAlignment="Center" 
                Padding="30">
            <Grid>
                <!-- Form Fields -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch">

                    <!-- Top title and exit -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Title -->
                        <TextBlock Text="Log In"
                                Foreground="White"
                                FontFamily="Times New Roman"
                                FontSize="30" FontWeight="Bold" 
                                HorizontalAlignment="Center" VerticalAlignment="Center" 
                                Margin="0,10,0,20" 
                                Grid.Column="1"/>

                        <!-- Exit Button-->
                        <Button Content="X"
                                Style="{StaticResource ExitButtonStyle}"
                                Width="40"
                                Height="40"  
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Grid.Column="2"
                                Click="Exit_Click"/>
                    </Grid>

                    <!--Logo-->
                    <Control Style="{StaticResource PersonLogoStyle}" Height="122" Width="140" />

                    <!-- Username Field -->
                    <StackPanel Margin="0,0,0,20">
                        <Border BorderBrush="White" BorderThickness="0,0,0,5" Padding="2,0,2,5">
                            <Grid>
                                <!-- Placeholder Text -->
                                <TextBlock x:Name="UsernamePlaceholder"
                                           Text="Username"
                                           VerticalAlignment="Center"
                                           Foreground="White"
                                           Margin="5,0"
                                           FontSize="16"
                                           IsHitTestVisible="False"
                                           Visibility="Visible"/>
                                <!-- Input Box -->
                                <TextBox x:Name="UsernameTextBox"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Foreground="White"
                                         FontSize="14"
                                         Padding="5,0"
                                         GotFocus="UsernameTextBox_GotFocus"
                                         LostFocus="UsernameTextBox_LostFocus"/>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <!-- Password Field -->
                    <StackPanel Margin="0,0,0,20">
                        <!-- Input Field -->
                        <Border BorderBrush="White" BorderThickness="0,0,0,5" Padding="2,0,2,5">
                            <Grid>
                                <!-- Placeholder Text -->
                                <TextBlock x:Name="PasswordPlaceholder"
                                           Text="Password"
                                           VerticalAlignment="Center"
                                           Foreground="White"
                                           Margin="5,0"
                                           FontSize="16"
                                           IsHitTestVisible="False"
                                           Visibility="Visible" />

                                <!-- Hidden Password Box -->
                                <PasswordBox x:Name="PasswordBox"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             Foreground="White"
                                             FontSize="14"
                                             Padding="5,0"
                                             GotFocus="PasswordBox_GotFocus"
                                             LostFocus="PasswordBox_LostFocus"
                                             PasswordChanged="PasswordBox_PasswordChanged"
                                             Visibility="Visible" />

                                <!-- Visible Text Box -->
                                <TextBox x:Name="PasswordTextBox"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Foreground="White"
                                         FontSize="14"
                                         Padding="5,0"
                                         Visibility="Collapsed"
                                         GotFocus="PasswordBox_GotFocus"
                                         LostFocus="PasswordBox_LostFocus" />
                            </Grid>
                        </Border>
                    </StackPanel>

                    <!-- Show Password Checkbox -->
                    <CheckBox x:Name="ShowPasswordCheckBox"
                              Content="Show Password"
                              Style="{StaticResource CustomCheckBoxStyle}"
                              FontSize="14"
                              Foreground="White"
                              Margin="0,10,0,0"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Left"
                              Checked="ShowPasswordCheckBox_Checked"
                              Unchecked="ShowPasswordCheckBox_Unchecked" />

                    <!-- Buttons -->
                    <StackPanel Orientation="Vertical" Width="300" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <!-- Log In Button -->
                        <Button Content="Log In" Width="170" Height="40" Style="{StaticResource RoundedButtonStyle}" Click="Login_Click" />
                        <!-- Clear Button -->
                        <Button Content="Clear" Width="80" Height="40" Style="{StaticResource ClearButtonStyle}" HorizontalAlignment="Left" Click="Clear_Click"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>