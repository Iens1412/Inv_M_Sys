<Window x:Class="Inv_M_Sys.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Inventory Management System" Height="450" Width="800">
    <Grid>
        <!-- Navigation Bar -->
        <StackPanel Orientation="Horizontal" Background="Gray" Height="50">
            <Button Content="Products" Click="NavigateToProducts" Margin="5"/>
            <Button Content="Categories" Click="NavigateToCategories" Margin="5"/>
            <Button Content="Reports" Click="NavigateToReports" Margin="5"/>
            <Button Content="Users" Click="NavigateToUsers" Margin="5"/>
        </StackPanel>

        <!-- Content Area -->
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Margin="0,50,0,0"/>
    </Grid>
</Window>
